{% assign sst = section.settings %}
{% style %}
  {%- assign bg_image = sst.background_image -%}
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ sst.distance_top_xs }}px;
    padding-bottom: {{ sst.distance_bottom_xs }}px;
    padding-left: clamp(0px, {{ sst.px}}px, 15px);
    padding-right: clamp(0px, {{ sst.px}}px, 15px);
  }
  {% if sst.background_color != blank or bg_image != blank %}
    #shopify-section-{{ section.id }} .distance:before {
      content: "";
      position: absolute;
      {% if sst.bg_position == 'top' %}
        top: 0;
      {% elsif sst.bg_position == 'center' %}
        top: 50%;
        transform: translateY(-50%);
      {% else %}
        bottom: 0;
      {% endif %}
      left: 0;
      width: 100%;
      height: {{ sst.height_background }}%;
      background: {{ sst.background_color }}{% if bg_image != blank %} url("{{ bg_image | image_url: width: 1920 }}"){% endif %} {{ sst.bg_img_position }} center no-repeat ;
      background-size: cover;
    }
  {% endif %}
  @media(min-width: 768px) {
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top_md }}px;
      padding-bottom: {{ sst.distance_bottom_md }}px;
      padding-left: {{ sst.px}}px;
      padding-right: {{ sst.px}}px;
    }
  }
  @media(min-width: 1200px) {
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top_xl }}px;
      padding-bottom: {{ sst.distance_bottom_xl }}px;
    }
  }
  {% if sst.show_seemore %}
    #shopify-section-{{ section.id }} [nov-item-act] {
      max-height: {{ sst.height_seemore }}px;
    }
    #shopify-section-{{ section.id }} [nov-item-act]:before {
      background: linear-gradient(to top,rgba({{ sst.bg_seemore | color_to_rgb | remove: 'rgb(' | remove: 'rgba(' | remove: ')' | remove: ', 0.0' }}, 90%),rgba({{ sst.bg_seemore | color_to_rgb | remove: 'rgb(' | remove: 'rgba(' | remove: ')' | remove: ', 0.0' }}, 10%));
    }
  {% endif %}
  {% for block in section.blocks %}
    {% assign bst = block.settings %}
    #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-text {
      color: {{ bst.t_c }};
      letter-spacing: {{ bst.t_lt }}px;
      text-transform: {{ bst.t_tt }};
      max-width: {{ bst.t_m }}px;
      margin-bottom: {{ bst.distance_bottom }}px;
      font-size: {{ bst.fz | divided_by: 10.0 }}rem;
    }
    #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-text strong {
      color:  {{ bst.tb_c }};
    }
    #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-text li::marker {
      color: rgba({{ bst.t_c | color_to_rgb | remove: 'rgb(' | remove: 'rgba(' | remove: ')' | remove: ', 0.0' }}, 65%);
    }
    {% if block.type == 'btn' %}
      #shopify-section-{{ section.id }} .block-{{ forloop.index }}.btn {
        color: {{ bst.c_btn }};
        background-color: {{ bst.b_btn }};
        border-color: {{ bst.bd_btn }};
        margin-bottom: {{ bst.distance_bottom }}px;
      }
      #shopify-section-{{ section.id }} .block-{{ forloop.index }}.btn:hover {
        color: {{ bst.c_btn_h }} !important;
        background-color: {{ bst.b_btn_h }} !important;
        border-color: {{ bst.bd_btn_h }} !important;
      }
    {% endif %}
    {% if block.type == 'policy' %}
      #shopify-section-{{ section.id }} .block-{{ forloop.index }}.policy {
        color: {{ bst.c_p }} !important;
        max-width: {{ bst.p_m }}px;
        font-size: {{ bst.p_s | divided_by: 10.0 }}rem;
        margin-bottom: {{ bst.distance_bottom }}px;
      }
    {% endif %}
    {% if block.type == 'image' %}
      #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-image {
        margin-bottom: {{ bst.distance_bottom }}px;
      }
      {%- if block.settings.max_w -%}
          #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-image .image-content {
            max-width: {{ bst.w_xs }}px;
          }
        {%- endif %}
    {% endif %}
    {% if block.type == 'number' %}
      #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-number .number {
        color: {{ bst.c_n }} !important;
        font-size: {{ bst.fzn | divided_by: 10.0 }}rem;
      }
      #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-number .number-title {
        color: {{ bst.c_t }} !important;
        font-size: {{ bst.fzt | divided_by: 10.0 }}rem;
      }
    {% endif %}
  {% endfor %}
  {% for block in section.blocks %}
      @media(min-width: 576px) {
      {% if block.type == 'image' %}
        {%- if block.settings.max_w -%}
          #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-image .image-content {
            max-width: {{ block.settings.w_sm }}px;
          }
        {%- endif %}
      {% endif %}
    {% endfor %}
  }
  {% for block in section.blocks %}
    @media(min-width: 768px) {
      {% if block.type == 'image' %}
        {%- if block.settings.max_w -%}
          #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-image .image-content {
            max-width: {{ block.settings.w_md }}px;
          }
        {%- endif %}
      {% endif %}
    }
  {% endfor %}
  {% for block in section.blocks %}
    @media(min-width: 992px) {
      {% if block.type == 'image' %}
        {%- if block.settings.max_w -%}
          #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-image .image-content {
            max-width: {{ block.settings.w_lg }}px;
          }
        {%- endif %}
      {% endif %}
    }
  {% endfor %}
  {% for block in section.blocks %}
    @media(min-width: 1200px) {
      {% if block.type == 'image' %}
        {%- if block.settings.max_w -%}
          #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-image .image-content {
            max-width: {{ block.settings.w }}px;
          }
        {%- endif %}
      {% endif %}
    }
  {% endfor %}
{% endstyle %}
<div class="position-relative {% if sst.bg_size == 'full' %}distance{% if sst.class != blank %} {{ sst.class }}{% endif %}{% endif %}">
  <div class="{{ sst.container }}">
    <div class="position-relative{% if sst.bg_size == 'container' %}distance{% if sst.class != blank %} {{ sst.class }}{% endif %}{% endif %}">
      <div class="nov-block__text {{ sst.title_alignment }} position-relative"{% if sst.show_seemore %} nov-item-act data-act="{{ section.id }}"{% endif %}>
        {% for block in section.blocks %}
          {% assign bst = block.settings %}
          {% if block.type == 'text' %}
            <div class="nov-text {{ bst.ff }} {{ bst.fw }} block-{{ forloop.index }}{% if sst.animate %} wow fadeInUp animated{% endif %}" data-wow-delay="{{ forloop.index | times: 0.1 }}s">{{ bst.text }}</div>
          {% endif %}
          {% if block.type == 'btn' %}
            <a href="{{ bst.btn_link }}" class="btn {{ bst.btn_type }} {{ bst.btn_size }} box-shadow color-{{ bst.color_button }} block-{{ forloop.index }}{% if sst.animate %} wow fadeInUp animated{% endif %}" data-wow-delay="{{ forloop.index | times: 0.1 }}s">
              <span>{{ bst.btn }}</span>
            </a>
          {% endif %}
          {% if block.type == 'image' %}
            <div class="nov-image block-{{ forloop.index }}{% if sst.animate %} wow fadeInUp animated{% endif %}" data-wow-delay="{{ forloop.index | times: 0.1 }}s">
              <div class="image-content">
                {% if bst.link != blank %}
                  <a href="{{ bst.btn_link }}">
                {% endif %}
                  {%- render 'nov-aspect-image', image: bst.image -%}
                {% if bst.link != blank %}</a>{% endif %}
              </div>
            </div>
          {% endif %}
          {% if block.type == 'policy' %}
            <div class="policy d-flex flex-column flex-xl-row align-items-center flex-wrap block-{{ forloop.index }}{% if sst.title_alignment == 'text-center' %} justify-content-center{% endif %}{% if sst.title_alignment == 'text-right' %} justify-content-end{% endif %}">
              {%- assign index = forloop.index -%}
              {% for i in (1..3) %}
                {%- assign p_id = 'p' | append: i -%}
                {%- assign icon_id = 'icon' | append: i -%}
                {%- capture time -%}{% cycle 0.1, 0.15, 0.2 %}{%- endcapture -%}
                {% if bst[p_id] != blank %}
                  <div class="policy-item d-flex align-items-center{% unless forloop.last %} mb-lg-30{% endunless %} {% if sst.animate %} wow fadeInUp animated{% endif %}" data-wow-delay="{{ index | times: time }}s">
                    {% if bst[icon_id] != blank %}
                      <div class="p-icon text-center"><img data-src="{{ bst[icon_id] | image_url: width: 100 }}" class="lazyload d-inline-block" width="100" height="100" alt="{{ bst[icon_id].alt }}"></div>
                    {% endif %}
                    <span>{{ bst[p_id] }}</span>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}
          {% if block.type == 'number' %}
            <div class="nov-number block-{{ forloop.index }}{% if sst.animate %} wow fadeInUp animated{% endif %}" data-wow-delay="{{ forloop.index | times: 0.3 }}s">
              <div class="number-content d-flex align-items-center">
                {% for i in (1..4) %}
                  {%- assign n_id = 'n' | append: i -%}
                  {%- assign nt_id = 'nt' | append: i -%}
                  {% if bst[n_id] != blank %}
                    <div class="number-item">
                      <div class="number">
                        <span class="number-animate" data-number="{{ bst[n_id] }}" data-scrollable>0</span>+
                      </div>
                      {% if bst[nt_id] != blank %}
                        <div class="number-title">{{ bst[nt_id] }}</div>
                      {% endif %}
                    </div>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
          {% endif %}
          {% if block.type == '@app' %}
            {% render block %}
          {% endif %}
        {% endfor %}
      </div>
      {% if sst.show_seemore %}
        <div class="btn-show__content font-600 {{ sst.title_alignment }} mt-20 nov_btn_act" data-toggle="{{ section.id }}">
          <span class="see_more pointer">{{ 'sections.button.view_more' | t }}<i class="zmdi zmdi-chevron-down"></i></span>
          <span class="see_less pointer">{{ 'sections.button.view_less' | t }}<i class="zmdi zmdi-chevron-up"></i></span>
        </div>
      {% endif %}
    </div>
  </div>
</div>
