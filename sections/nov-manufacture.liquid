{% assign sst = section.settings %}
{% style %}
  {%- assign bg_image = sst.background_image -%}
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ sst.distance_top_xs }}px;
    padding-bottom: {{ sst.distance_bottom_xs }}px;
    {% if sst.background_color != blank or bg_image != blank %}
      background: {{ sst.background_color }}{% if bg_image != blank %} url("{{ bg_image | image_url: width: 1920 }}"){% endif %} no-repeat center;
      background-size: cover;
    {% endif %}
  }
  @media(min-width: 768px) {
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top_md }}px;
      padding-bottom: {{ sst.distance_bottom_md }}px;
    }
  }
  @media(min-width: 1200px) {
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top_xl }}px;
      padding-bottom: {{ sst.distance_bottom_xl }}px;
    }
  }
  #shopify-section-{{ section.id }} .image {
    max-width: {{ sst.width_icon }}px;
    max-height: {{ sst.height_icon }}px;
  }
  #shopify-section-{{ section.id }} .manufacture__item {
    background: {{ sst.bg_item }};
    border-color: {{ sst.border_color }};
    border-radius: {{ sst.corner_radius }}px;
    padding: {{ sst.paddingY }}px {{ sst.paddingX }}px;
  }
  #shopify-section-{{ section.id }} .nov-grid-type {
    margin-top: {{ sst.spacing | divided_by: 2 | times: -1 }}px;
    margin-bottom: {{ sst.spacing | divided_by: 2 | times: -1 }}px;
  }
  #shopify-section-{{ section.id }} .nov-grid-type .sp-item {
    padding-top: {{ sst.spacing | divided_by: 2 }}px;
    padding-bottom: {{ sst.spacing | divided_by: 2 }}px;
  }
{% endstyle %}
<div class="distance{% if sst.class != blank %} {{ sst.class }}{% endif %}{% if sst.animate %} wow fadeInUp{% endif %}" data-section-id="{{ section.id }}"  data-section-type="nov-slick">
  <div class="{{ sst.container }}">
    {% render 'heading-section', sub_position: sst.subheading_position %}
    <div class="{% if sst.type == 'slider' %}nov-slick-carousel row spacing-{{ sst.spacing }}{% elsif sst.type == 'grid' %}nov-grid-type row spacing-{{ sst.spacing }} justify-content-center{% else %}nov-scroll-type d-flex flex-nowrap{% endif %}"
      {% if sst.type == 'slider' %}
        data-autoplay="{{ sst.auto }}" 
        data-autoplayTimeout="{{ sst.time }}000"
        data-loop="true"
        data-dots="false"
        data-nav="false"
        data-row="1"
        data-row_mobile="1"
        data-items_xxl="{{ sst.xxl }}"
        data-items_xl="{{ sst.xl }}"
        data-items_lg="{{ sst.lg }}"
        data-items_md="{{ sst.md }}"
        data-items_sm="{{ sst.sm }}"
        data-items_xs="{{ sst.xs }}"
        {% if sst.one_slider %}data-oneslider="1"{% endif %}
      {% endif %}
    >
    {% for block in section.blocks %}
      {% if block.type == 'logo_image' %}
        <div class="sp-item{% unless sst.type == 'scroll' %} {%- render 'number-to-col' -%}{% endunless %}">
          <div class="manufacture__item overflow_hidden text-center d-flex align-items-center justify-content-center{% if sst.box_shadow %} box-shadow{% endif %}">
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="manufacture__link d-inline-block">
            {% endif %}
            {% if block.settings.image != blank %}
              <div class="image d-flex">
                <img src="{{ block.settings.image | image_url: width: 1 }}" data-src="{{ block.settings.image | image_url: width: 500 }}" class="d-inline-block lazyload img-fluid" alt="{{ block.settings.image.alt }}" width="500" height="{{ 500 | divided_by: block.settings.image.aspect_ratio }}" style="height: auto;">
              </div>
            {% else %}
              {{ 'hero-apparel-3' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            {% if block.settings.link != blank %}
              </a>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
    </div>
    {% for block in section.blocks %}
      {% if block.type == '@app' %}
        {% render block %}
      {% endif %}
    {% endfor %}
  </div>
</div>
