{%- liquid 
  assign sst = section.settings
  assign bg_image = sst.background_image
  assign bg_color = sst.background_color
-%}

{% style %}
  
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ sst.distance_top_xs }}px;
    padding-bottom: {{ sst.distance_bottom_xs }}px;
  }
  {% if sst.background_color != blank or bg_image != blank %}
    #shopify-section-{{ section.id }} .ss-bg {
      position: absolute;
      {% if sst.bg_position == 'top' %}
        top: 0;
      {% elsif sst.bg_position == 'center' %}
        top: 50%;
        transform: translateY(-50%);
      {% else %}
        bottom: 0;
      {% endif %}
      left: 0;
      width: 100%;
      background: {{ bg_color }}{% if bg_image != blank %} url("{{ bg_image | image_url: width: 1920 }}"){% endif %} no-repeat {{ sst.bg_img_position }} center;
      background-size: cover;
      border-radius: {{ sst.corner_radius }}px;
      {% if sst.bg_gradient_top != blank %}
        --bg-gradient: {{ sst.bg_gradient_top }};
        --bg-gradient-time: {{ sst.bg_gradient_top_time  }}s;
      {% endif %}
    }
  {% endif %}
  @media(max-width: 575px) {
    #shopify-section-{{ section.id }} .ss-bg {
      height: {{ sst.height_background_xs }}%;
    }
  }
  @media(min-width: 576px) and (max-width: 767px) {
    #shopify-section-{{ section.id }} .ss-bg {
      height: {{ sst.height_background_sm }}%;
    }
  }
  @media(min-width: 768px) and (max-width: 991px) {
    #shopify-section-{{ section.id }} .ss-bg {
      height: {{ sst.height_background_md }}%;
    }
  }
  @media(min-width: 992px) and (max-width: 1199px) {
    #shopify-section-{{ section.id }} .ss-bg {
      height: {{ sst.height_background_lg }}%;
    }
  }
  @media(min-width: 1200px) and (max-width: 1440px) {
    #shopify-section-{{ section.id }} .ss-bg {
      height: {{ sst.height_background_xl }}%;
    }
  }
  @media(min-width: 1441px) {
    #shopify-section-{{ section.id }} .ss-bg {
      height: {{ sst.height_background_xxl }}%;
    }
  }
  @media(min-width: 768px) {
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top_md }}px;
      padding-bottom: {{ sst.distance_bottom_md }}px;
    }
  }
  @media(min-width: 1200px) {
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top_xl }}px;
      padding-bottom: {{ sst.distance_bottom_xl }}px;
    }
  }
  #shopify-section-{{ section.id }} .countdownfree .item-time {
    --color: {{ sst.c_cd }};
    background-color: {{ sst.bg_cd }};
    border-radius: {{ sst.border_radius }}px;
  }
  #shopify-section-{{ section.id }} .block-countdown .respone_image {
    border-radius: {{ sst.corner_img }}px;
    overflow: hidden;
  }
{% endstyle %}

<div class="position-relative{% if sst.bg_size == 'full' %} distance{% if sst.class != blank %} {{ sst.class }}{% endif %}{% endif %}{% if sst.animate %} wow fadeInUp{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-slick">
  {% if sst.bg_size == 'full' %}<div class="ss-bg {% if sst.bg_gradient_top != blank %} gr-top gradient-animate overflow_hidden{% endif %}"></div>{% endif %}
  <div class="{{ sst.container }}">
    <div class="container-inner{% if sst.bg_size == 'container' %} position-relative distance{% if sst.class != blank %} {{ sst.class }}{% endif %}{% endif %}">
      {% if sst.bg_size == 'container' %}<div class="ss-bg {% if sst.bg_gradient_top != blank %} gr-top gradient-animate overflow_hidden{% endif %}"></div>{% endif %}
      {% if sst.img_right != blank %}
        <div class="row align-items-center">
          <div class="col-xl-4 col-lg-5 col-md-6">
      {% endif %}

        <div class="countdown-content position-relative {{ sst.heading_alignment }}">
          {% render 'heading-section', sub_position: sst.subheading_position, class: 'mb-30' %}
          {% if sst.countdown_timeend != blank %}
            <div class="countdownfree d-inline-flex{% if sst.show_shadow %} shadow{% endif %}" data-countdown="{{ sst.countdown_timeend }}" data-show-days="{{ settings.show_day }}" data-restart="{{ settings.restart }}"></div>
          {% else %}
            <div class="countdownfree d-inline-flex{% if sst.show_shadow %} shadow{% endif %}">
              <div class="item-time"><span class="data-number">24</span><span class="name-time">Days</span></div>
              <div class="item-time"><span class="data-number">09</span><span class="name-time">Hours</span></div>
              <div class="item-time"><span class="data-number">28</span><span class="name-time">Mins</span></div>
              <div class="item-time"><span class="data-number">21</span><span class="name-time">Secs</span></div>
            </div>
          {% endif %}
          {% if sst.btn != blank %}
            <div class="mt-30 mt-lg-20 color-{{ sst.color_section }}">
              <a href="{{ sst.btn_link }}" class="btn">
                <span>{{ sst.btn }}</span>
                <i class="rbb-icon-direction-55 position-relative"></i>
              </a>
            </div>
          {% endif %}
        </div>
        
      {% if sst.img_right != blank %}
        </div>
        <div class="col-xl-8 col-lg-7 col-md-6 mt-sm-40">
          <div class="img-right position-relative nov-sh-image-2">
            <img data-src="{{ sst.img_right | image_url: width: 1920 }}" class="lazyload img-fluid" alt="{{ sst.img_right.alt | default: 'image' }}" width="1920" height="{{ 1920 | divided_by: sst.img_right.aspect_ratio }}">
          </div>
        </div>
      </div>
      {% endif %}
      {% for block in section.blocks %}
        {% if block.type == '@app' %}
          {% render block %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Vinova Countdown",
    "class": "section-countdown",
    "settings": [
      {
        "type": "inline_richtext",
        "id": "heading",
        "label": "Heading",
        "default": "Vinova Countdown"
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "Heading color",
        "default": "#222222"
      },
      {
        "type": "richtext",
        "id": "subheading",
        "label": "Sub heading",
        "default": "<p>Subtitle from happy customers</p>"
      },
      {
        "type": "color",
        "id": "subheading_color",
        "label": "Sub heading color",
        "default": "#666666"
      },
      {
        "type": "richtext",
        "id": "descheading",
        "label": "Description",
        "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>"
      },
      {
        "type": "color",
        "id": "descheading_color",
        "label": "Description color",
        "default": "#666666"
      },
      {
        "type": "select",
        "id": "subheading_position",
        "label": "Sub heading position",
        "default": "bottom",
        "options": [
          {
            "value": "top",
            "label": "Top"
          },
          {
            "value": "bottom",
            "label": "Bottom"
          }
        ]
      },
      {
        "type": "select",
        "id": "heading_alignment",
        "label": "Heading alignment",
        "default": "text-left",
        "options": [
          {
            "value": "text-left",
            "label": "Left"
          },
          {
            "value": "text-center",
            "label": "Center"
          },
          {
            "value": "text-right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "header",
        "content": "Countdown Time"
      },
      {
        "type": "text",
        "id": "countdown_timeend",
        "label": "Time end product",
        "placeholder": "YYYY\/MM\/DD"
      },
      {
        "type": "paragraph",
        "content": "Format: 'Year\/Month\/Day'"
      },
      {
        "type": "paragraph",
        "content": "Example: '2022\/01\/30'"
      },
      {
        "type": "range",
        "id": "border_radius",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Border radius",
        "default": 0
      },
      {
        "type": "color_background",
        "id": "c_cd",
        "label": "Color gradient"
      },
      {
        "type": "color",
        "id": "bg_cd",
        "label": "Background",
        "default": "#000"
      },
      {
        "type": "checkbox",
        "id": "show_shadow",
        "label": "Show shadow"
      },
      {
        "type": "header",
        "content": "Button"
      },
      {
        "type": "text",
        "id": "btn",
        "label": "Button",
        "default": "Shop now"
      },
      {
        "type": "url",
        "id": "btn_link",
        "label": "Button link"
      },
      {
        "type": "color_scheme",
        "id": "color_section",
        "label": "Color button",
        "default": "background-1"
      },
      {
        "type": "header",
        "content": "Image Right"
      },
      {
        "type": "image_picker",
        "id": "img_right",
        "label": "Image right"
      },
      {
        "type":  "header",
        "content": "Section Style"
      },
      {
        "type": "select",
        "id": "container",
        "label": "Container",
        "default": "container",
        "options": [
          { "value": "container", "label": "Container" },
          { "value": "container-fluid", "label": "Container fluid" },
          { "value": "container-full", "label": "Container full width" }
        ]
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Colors",
        "default": "#ffffff"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "range",
        "id": "corner_radius",
        "min": 0,
        "max": 50,
        "step": 1,
        "label": "Corner background",
        "unit": "px",
        "default": 0
      },
      {
        "type": "select",
        "id": "bg_img_position",
        "label": "Background image position",
        "default": "center",
        "options": [
          { "value": "top", "label": "Top" },
          { "value": "center", "label": "Center" },
          { "value": "bottom", "label": "Bottom" }
        ]
