{% assign sst = section.settings %}
{%- if settings.lang_iso_rtl != blank -%}
  {% assign list_iso_rtl = settings.lang_iso_rtl | downcase %}
  {% if list_iso_rtl contains request.locale.iso_code %}
    {% assign iso_rtl = true %}
  {% else %}
    {% assign iso_rtl = false %}
  {% endif %}
{%- endif -%}

{%- style -%}
  
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ sst.distance_top_xs }}px;
    padding-bottom: {{ sst.distance_bottom_xs }}px;
    {% if settings.enable_rtl and iso_rtl %}
      padding-left: {{ sst.pr_xs }}px;
      padding-right: {{ sst.pl_xs }}px;
    {% else %}
      padding-left: {{ sst.pl_xs }}px;
      padding-right: {{ sst.pr_xs }}px;
    {% endif %}
    {%- if sst.background_color != blank -%}
      background-color: {{ sst.background_color }};
    {%- endif -%}
  }
  #shopify-section-{{ section.id }} .nov-slick-carousel {
    border-radius: {{ sst.border_radius }}px;
  }
  #shopify-section-{{ section.id }} .image-slider__item {
    border-radius: {{ sst.border_radius }}px;
  }
  #shopify-section-{{ section.id }} .bl_t .title {
    color: {{ sst.t_c }};
    font-size: {{ sst.t_s | divided_by: 10.0}}rem;
    margin-bottom: {{ sst.t_mb }}px;
  }
  #shopify-section-{{ section.id }} .bl_t .sub_title {
    color: {{ sst.st_c }};
    font-size: {{ sst.st_s | divided_by: 10.0}}rem;
    margin-bottom: {{ sst.st_mb }}px;
  }
  #shopify-section-{{ section.id }} .bl_t .desc {
    color: {{ sst.d_c }};
    font-size: {{ sst.d_s | divided_by: 10.0}}rem;
    margin-bottom: {{ sst.d_mb }}px;
  }
  #shopify-section-{{ section.id }} .slick-slider .slick-dots li button {
    background-color: {{ sst.dots_c }};
  }
  #shopify-section-{{ section.id }} .slick-slider .slick-dots li.slick-active button {
    background-color: {{ sst.dots_ca }};
  }
  @media(max-width:  991px) {
    #shopify-section-{{ section.id }} .bl_t .title {
      font-size: {{ sst.t_s_md | divided_by: 10.0}}rem;
      margin-bottom: {{ sst.t_mb_md }}px;
    }
    #shopify-section-{{ section.id }} .bl_t .sub_title {
      font-size: {{ sst.st_s_md | divided_by: 10.0}}rem;
      margin-bottom: {{ sst.st_mb_md }}px;
    }
    #shopify-section-{{ section.id }} .bl_t .desc {
      font-size: {{ sst.d_s_md | divided_by: 10.0}}rem;
      margin-bottom: {{ sst.d_mb_md }}px;
    }
  }
  @media(min-width: 768px) {
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top_md }}px;
      padding-bottom: {{ sst.distance_bottom_md }}px;
      {% if settings.enable_rtl and iso_rtl %}
        padding-left: {{ sst.pr_md }}px;
        padding-right: {{ sst.pl_md }}px;
      {% else %}
        padding-left: {{ sst.pl_md }}px;
        padding-right: {{ sst.pr_md }}px;
      {% endif %}
    }
  }
  @media(min-width: 1200px) {
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top_xl }}px;
      padding-bottom: {{ sst.distance_bottom_xl }}px;
      {% if settings.enable_rtl and iso_rtl %}
        padding-left: {{ sst.pr_xl }}px;
        padding-right: {{ sst.pl_xl }}px;
      {% else %}
        padding-left: {{ sst.pl_xl }}px;
        padding-right: {{ sst.pr_xl }}px;
      {% endif %}
    }
  }
  {% if sst.show_color_btn_link %}
    #shopify-section-{{ section.id }} .btn-shopnow {
      --color: {{ sst.color_btn_link }};
    }
  {% endif %}
{%- endstyle -%}

<div class="distance color-{{ sst.color_section }}{% if sst.class != blank %} {{ sst.class }}{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-slick">
  <div class="{{ sst.container }}">
    {% if section.blocks.size > 0 %}
      {% render 'heading-section', sub_position: sst.subheading_position %}
      <div class="nov-slick-carousel row spacing-{{ sst.spacing }} spacing-xs-10 {{ sst.style }} video-current-play{% if sst.animate %} wow fadeInUp animated{% endif %}"
        data-autoplay="{{ sst.auto }}"
        data-autoplaytimeout="{{ sst.time }}000"
        data-loop="true" 
        data-dots="{{ sst.s_dot }}"
        data-nav="{{ sst.s_nav }}" 
        data-items="{{ sst.lg }}" 
        data-items_md="{{ sst.md }}" 
        data-items_sm="{{ sst.sm }}" 
        data-items_xs="{{ sst.xs }}"
        data-row="1"
        data-focus="false"
        data-hover="false"
        {% if sst.style == 'style2' %}
          data-center="true"
        {% endif %}
        {% if sst.one_slider == true %}data-oneslider="1"{% endif %}>
        {% for block in section.blocks %}
        {% assign bst = block.settings %}
        {% if sst.aspect == '11' %}
          {% assign padding_video = 100 %}
        {% elsif sst.aspect == '34' %}
          {% assign padding_video = 133.33333333333334 %}
        {% elsif sst.aspect == '43' %}
          {% assign padding_video = 75 %}
        {% else %}
          {% assign padding_video = bst.image.aspect_ratio | times: 100 %}
        {% endif %}
          <div class="sp-item{% render 'number-to-col' %}">
            {% if block.type == 'image' %}
              <div class="image-slider__item position-relative overflow_hidden{% if bst.video != blank %} d-flex{% endif %}{% if sst.img_animate %} nov-sh-image-2 no-sh-xs{% endif %} block-{{ forloop.index }}{% if sst.enable_shadow %} box-shadow-2{% endif %}"{% if bst.video != blank and sst.aspect != 'auto' %} style="padding-top: {{ padding_video | append: '%' }}"{% endif %}>
                {% if bst.link != blank %}
                  <a href="{{ bst.link }}" class="image-slider__link{% if bst.video != blank %} d-flex w-100{% endif %}">
                {% endif %}
                {% if bst.image != blank or bst.video != blank %}
                  {% if bst.image != blank and bst.video == blank %}
                    {%- render 'nov-aspect-image', image: bst.image, aspect: sst.aspect -%}
                  {% endif %}
                  {% if bst.video != blank %}
                    {{ bst.video | video_tag: image_size: '1100x', autoplay: true, loop: true, controls: false, muted: true, data-alt: shop.name, style: "width: 100%;max-width: 100%;height: auto;object-fit: cover;" }}
                  {% endif %}
                {% else %}
                  {%- capture current -%}{% cycle 1, 2, 3 %}{%- endcapture -%}
                  {{ 'hero-apparel-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
                {% if bst.link != blank %}
                  </a>
                {% endif %}
                {% if sst.show_block_text %}
                  <div class="bl_t position-absolute {{ bst.align }}">
                    {% if bst.title != blank %}
                      <div class="title {{ sst.t_fw }} {{ sst.t_ff }}">{{ bst.title }}</div>
                    {% endif %}
                    {% if bst.stitle != blank %}
                      <div class="sub_title {{ sst.st_fw }} {{ sst.st_ff }}">{{ bst.stitle }}</div>
                    {% endif %}
                    {% if bst.desc != blank %}
                      <div class="desc {{ sst.d_fw }} {{ sst.d_ff }}">{{ bst.desc }}</div>
                    {% endif %}
                    {% if bst.btn %}
                      <a href="{{ bst.link }}" class="btn-shopnow font-500 mt-10 text-capitalize d-inline-flex align-items-center{% if sst.show_color_btn_link %} color-gradient{% endif %}">
                        {{ 'sections.button.shop_now' | t }}
                        <i class="zmdi zmdi-long-arrow-right"></i>
                      </a>
                    {% endif %}
                  </div>
                {% endif %}
                {% if sst.show_btn_zoom %}
                  <a href="{{ bst.image | image_url: width: 1200 }}" data-fancybox="gallery" class="btn-zoom position-absolute d-flex align-items-center justify-content-center">
                    <i class="rbb-icon-search-10"></i>
                  </a>
                {% endif %}
              </div>
            {% endif %}
            {% if block.type == '@app' %}
              <div class="image-slider__item">
                {% render block %}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}

    {% if section.blocks.size == 0 %}
      {% render 'no-blocks' %}
    {% endif %}
  </div>
</div>
