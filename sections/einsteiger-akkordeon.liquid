<style>
#shopify-section-{{ section.id }}{
  --mdw-brand:#ABCA20;
  --mdw-bg:#17171A;
  --mdw-card:#1C1D22;
  --mdw-border:#2A2D33;
  --mdw-text:#E9EDF3;
  --mdw-sub:#A4ADBA;
  --mdw-glow:0 0 0 1px rgba(171,202,32,.25),
              0 10px 30px rgba(171,202,32,.22),
              0 16px 38px rgba(0,0,0,.35);
  font-family:system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;
  color:var(--mdw-text);
}

/* Container + Background */
#shopify-section-{{ section.id }} .container{
  background: radial-gradient(600px 260px at 90% -60px, rgba(171,202,32,.08), transparent 60%) var(--mdw-bg);
  border:1px solid var(--mdw-border);
  border-radius:16px;
  box-shadow:0 10px 30px rgba(0,0,0,.28);
  padding: clamp(22px,2.6vw,36px);
}

/* Carousel Icons / Items */
#shopify-section-{{ section.id }} .nov-slick-carousel .item-content{
  background: var(--mdw-card);
  border:1px solid var(--mdw-border);
  border-radius:14px;
  box-shadow:0 8px 22px rgba(0,0,0,.25);
  transition: all .25s ease;
}
#shopify-section-{{ section.id }} .nov-slick-carousel .item-content:hover{
  border-color: rgba(171,202,32,.45);
  box-shadow:var(--mdw-glow);
  transform:translateY(-2px);
}
#shopify-section-{{ section.id }} .nov-slick-carousel .name_link{
  color: var(--mdw-text);
  font-weight:700;
  margin-top:8px;
  letter-spacing:.2px;
}

/* FAQ Text Headline */
#shopify-section-{{ section.id }} .faqText .title{
  color: var(--mdw-brand);
  font-size: clamp(20px,2.6vw,26px);
  margin-bottom:6px;
}
#shopify-section-{{ section.id }} .faqText .block_content{
  color: var(--mdw-sub);
  max-width:800px;
  margin:0 auto 24px;
  font-size:15px;
  line-height:1.6;
}

/* Main Accordion */
#shopify-section-{{ section.id }} .faqs-main{
  background: var(--mdw-card);
  border:1px solid var(--mdw-border);
  border-radius:14px;
  margin-bottom:12px;
  overflow:hidden;
  transition:border-color .2s ease, box-shadow .25s ease;
}
#shopify-section-{{ section.id }} .faqs-main.active,
#shopify-section-{{ section.id }} .faqs-main:hover{
  border-color:rgba(171,202,32,.45);
  box-shadow:var(--mdw-glow);
}

/* Accordion Header */
#shopify-section-{{ section.id }} .panel-header{
  background:rgba(255,255,255,.02);
  color:var(--mdw-text);
  font-weight:800;
  font-size:17px;
  padding:14px 18px;
  cursor:pointer;
  display:flex;
  justify-content:space-between;
  align-items:center;
  transition:background .2s ease,color .2s ease;
  position:relative;
}
#shopify-section-{{ section.id }} .panel-header::after{
  content:"";
  width:20px;height:20px;flex:0 0 20px;
  background:var(--mdw-brand);
  mask:url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" fill="%23000" viewBox="0 0 24 24"><path d="M7 10l5 5 5-5"/></svg>') center/contain no-repeat;
  transition:transform .25s ease;
  opacity:.85;
}
#shopify-section-{{ section.id }} .faqs-main.active .panel-header::after{
  transform:rotate(180deg);
}
#shopify-section-{{ section.id }} .panel-header:hover{
  background:rgba(171,202,32,.08);
  color:#fff;
}

/* Accordion Body */
#shopify-section-{{ section.id }} .panel-body{
  background:linear-gradient(180deg,rgba(255,255,255,.02),rgba(255,255,255,.00));
  border-top:1px solid var(--mdw-border);
  padding:14px 18px 18px;
  animation:mdwFade .22s ease;
}
@keyframes mdwFade{from{opacity:0;transform:translateY(2px);}to{opacity:1;transform:none;}}

#shopify-section-{{ section.id }} .item-content.rte{
  color:var(--mdw-text);
  line-height:1.65;
}
#shopify-section-{{ section.id }} .item-content.rte a{
  color:var(--mdw-brand);
  text-decoration:none;
  font-weight:600;
}
#shopify-section-{{ section.id }} .item-content.rte a:hover{
  text-decoration:underline;
}

/* Unter-Akkordeon */
#shopify-section-{{ section.id }} .sub-accordion .panel-group{
  margin:8px 0;
  background:rgba(255,255,255,.02);
  border-radius:12px;
  border:1px solid var(--mdw-border);
}
#shopify-section-{{ section.id }} .sub-accordion .panel-header{
  padding:10px 14px;
  font-size:15px;
  font-weight:700;
  color:var(--mdw-text);
}
#shopify-section-{{ section.id }} .sub-accordion .panel-header:hover{
  background:rgba(171,202,32,.08);
}
#shopify-section-{{ section.id }} .sub-accordion .panel-body{
  border-top:1px solid var(--mdw-border);
  background:rgba(255,255,255,.01);
  padding:10px 14px 14px;
}

/* Bilder + Captions */
#shopify-section-{{ section.id }} .faq-image{
  border-radius:10px;
  border:1px solid var(--mdw-border);
  box-shadow:0 8px 20px rgba(0,0,0,.28);
}
#shopify-section-{{ section.id }} .faq-figure figcaption{
  color:var(--mdw-sub);
}

/* Contact Footer */
#shopify-section-{{ section.id }} .faqContact{
  margin-top:40px;
}
#shopify-section-{{ section.id }} .title_answer{
  color:var(--mdw-brand);
  font-size:22px;
  margin-bottom:8px;
