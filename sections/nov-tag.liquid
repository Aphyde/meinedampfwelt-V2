            "settings":{
              "title": "Lorem"
            }
          },
          {
            "type":"item_tag",
            "settings":{
              "title": "Lorem"
            }
          },
          {
            "type":"item_tag",
            "settings":{
              "title": "Lorem"
            }
          }
        ]
      }
    ]
  }
{% endschema %}