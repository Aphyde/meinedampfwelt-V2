{% style %}
/* — Gleich hohe Produktkarten im Slider (Desktop) — */
@media (min-width:1200px){
  /* 1) Slides dehnen */
  #shopify-section-{{ section.id }} .swiper-wrapper{
    align-items: stretch; /* lässt alle .swiper-slide gleich hoch werden */
  }
  #shopify-section-{{ section.id }} .swiper-slide{
    height: auto; /* Höhe vom Inhalt bestimmen lassen */
  }

  /* 2) Karte über volle Höhe aufbauen (klassische Vinova-Klassen abgedeckt) */
  #shopify-section-{{ section.id }} .swiper-slide .item-product,
  #shopify-section-{{ section.id }} .swiper-slide .product-item,
  #shopify-section-{{ section.id }} .swiper-slide .product-card,
  #shopify-section-{{ section.id }} .swiper-slide .card-product{
    display:flex;
    flex-direction:column;
    height:100%;
  }

  /* 3) Bildbereich behält Ratio, staucht die Karte nicht */
  #shopify-section-{{ section.id }} .product-image,
  #shopify-section-{{ section.id }} .product__image,
  #shopify-section-{{ section.id }} .thumbnail{
    /* falls nicht schon vorhanden: */
    aspect-ratio: 1 / 1;
    width:100%;
  }

  /* 4) Content-Bereich füllt die Resthöhe */
  #shopify-section-{{ section.id }} .product-info,
  #shopify-section-{{ section.id }} .product__info,
  #shopify-section-{{ section.id }} .card-body{
    display:flex;
    flex-direction:column;
    gap:.5rem;
    flex:1 1 auto; /* nimmt den verfügbaren Platz ein */
  }

  /* 5) Titel auf 2 Zeilen clampen + fixe Mindesthöhe -> vermeidet Sprünge */
  #shopify-section-{{ section.id }} .product-title,
  #shopify-section-{{ section.id }} .product__title,
  #shopify-section-{{ section.id }} .card-title{
    display:-webkit-box;
    -webkit-line-clamp: 2; /* bei Bedarf auf 3 erhöhen */
    -webkit-box-orient: vertical;
    overflow:hidden;
    line-height:1.3;
    min-height: calc(1.3em * 2); /* passt zu line-clamp 2 */
  }

  /* 6) Preis/CTA immer unten ausrichten */
  #shopify-section-{{ section.id }} .product-bottom,
  #shopify-section-{{ section.id }} .product-meta,
  #shopify-section-{{ section.id }} .price-area,
  #shopify-section-{{ section.id }} .card-footer{
    margin-top:auto; /* schiebt diesen Block an das Kartenende */
  }
}
{% endstyle %}
