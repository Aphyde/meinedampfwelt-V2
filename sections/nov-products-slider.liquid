{%- assign sst = section.settings -%}
{%- assign collection = collections[sst.collection] -%}
{%- assign product_limit = sst.limit -%}
{%- assign bg_image = sst.background_image -%}
{% style %}
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ sst.distance_top_xs }}px;
    padding-bottom: {{ sst.distance_bottom_xs }}px;
    {% if sst.background_color != blank or bg_image != blank %}
      background: {{ sst.background_color }}{% if bg_image != blank %} url("{{ bg_image | image_url: width: 1920 }}"){% endif %} center;
      background-size: cover;
    {% endif %}
  }
  {% if sst.bg_pattern != blank %}
    #shopify-section-{{ section.id }} .distance:before {
      content: "";
      position: absolute;
      background: url("{{ sst.bg_pattern | image_url: width: 1920 }}");
      background-size: contain;
      background-repeat: no-repeat;
      aspect-ratio: 1 / {{ 1 | divided_by: sst.bg_pattern.aspect_ratio }};
      animation: ImgAnimate 4s linear infinite;
      {{ sst.bg_pattern_position }}
    }
  {% endif %}
  @media(min-width: 768px) {
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top_md }}px;
      padding-bottom: {{ sst.distance_bottom_md }}px;
    }
  }
  @media(min-width: 1200px) {
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top_xl }}px;
      padding-bottom: {{ sst.distance_bottom_xl }}px;
    }
  }
  {% if sst.show_pagination_progress %}
    #shopify-section-{{ section.id }} .swiper-scrollbar {
      background: {{ sst.pagination_progress_bg }} !important;
    }
    #shopify-section-{{ section.id }} .swiper-scrollbar-drag {
      background: {{ sst.progress_bg }} !important;
    }
  {% endif %}
  {% if sst.show_nav %}
    #shopify-section-{{ section.id }} .nav-arrow {
      --slider-arrow-color: {{ sst.arrow_color }};
      --slider-arrow-bg: {{ sst.arrow_bg }};
      --slider-arrow-border: {{ sst.arrow_border }};
    }
  {% endif %}
  {% if sst.banner != blank %}
    #shopify-section-{{ section.id }} .block-banner {
      border-radius: {{ sst.corner_banner }}px;
    }
  {% endif %}
  {% if sst.enable_custom_style %}
    #shopify-section-{{ section.id }} {
      --product-color-border: {{ sst.product_border_color }};
      --product-color-background: {{ sst.product_background_color }};
      --product-color-type: {{ sst.product_type_color }};
      --product-color-title: {{ sst.product_title_color }};
      --product-color-title-hover: {{ sst.product_title_color_hover }};
      --product-color-price: {{ sst.product_price_color }};
      --product-color-reduced-price: {{ sst.product_price_reduced_color }};
    }
  {% endif %}
  #shopify-section-{{ section.id }} .add-to-cart-btn,
  #shopify-section-{{ section.id }} .btn-quick-add,
  #shopify-section-{{ section.id }} .product__popup-swatch {
    display: none !important;
  }
{% endstyle %}
<div class="distance position-relative color-{{ sst.color_section }}{% if sst.class != blank %} {{ sst.class }}{% endif %}{% if sst.animate %} wow fadeInUp{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-swiper">
  <div class="{{ sst.container }}">
    {% if sst.banner == blank %}
      {% render 'heading-section', sub_position: sst.subheading_position %}
    {% endif %}

    {% if sst.banner != blank %}
      <div class="row spacing-{{ sst.spacing }} align-items-center {% if sst.banner_position == 'right' %} flex-md-row-reverse{% endif %}">
        <div class="col-lg-6 col-md-7 mb-sm-15">
          <div class="block-banner position-relative overflow_hidden">
            {% render 'nov-aspect-image', image: sst.banner %}
            {% render 'heading-section', sub_position: sst.subheading_position %}
            {% if sst.show_nav %}
              <div class="slider-nav d-flex align-items-center justify-content-center justify-content-lg-start mt-30">
                <div class="nav-arrow nav-prev pointer"></div>
                <div class="nav-arrow nav-next pointer"></div>
              </div>
            {% endif %}
          </div>
        </div>
        <div class="col-lg-6 col-md-5">
    {% endif %}

    {% comment %} product slider {% endcomment %}
    <div class="{% if sst.type == 'grid' %}grid--view-items{% else %}list--view-items{% endif %} nov-swiper-carousel swiper slider-shadow"
      data-autoplay="false" 
      data-autoplayTimeout="6000"
      data-loop="false"
      data-row="{{ sst.row_number }}"
      data-row_mobile="{{ sst.row_mobile }}"
      data-items_xxl="{{ sst.xxl }}"
      data-items_xl="{{ sst.xl }}"
      data-items_lg="{{ sst.lg }}"
      data-items_md="{{ sst.md }}"
      data-items_sm="{{ sst.sm }}"
      data-items_xs="{{ sst.xs }}"
      data-spacing="{{ sst.spacing }}">
      <div class="swiper-wrapper">
        {% for product in collection.products limit: product_limit %}
          <div class="swiper-slide item">
            {% if sst.type == 'grid' %}
              {% render 'product-grid-item-style-1', product: product, section_id: section.id %}
            {% else %}
              {% render 'product-list-item-style-1', product: product, section_id: section.id %}
            {% endif %}
          </div>
        {% else %}
          {%- for i in (1..6) -%}
            {%- capture current -%}{% cycle 1, 2, 3, 4 %}{%- endcapture -%}
            <div class="swiper-slide sp-item mb-30">
              {{ 'product-apparel-' | append: current | placeholder_svg_tag : 'placeholder-svg' }}
            </div>
          {%- endfor -%}
        {% endfor %}
      </div>
      {% if sst.show_nav or sst.show_dots %}
        <div class="d-flex align-items-center justify-content-center mt-60">
          {% if sst.show_nav %}
            <div class="nav-arrow nav-prev pointer"></div>
          {% endif %}
          {% if sst.show_dots %}
            <div class="swiper-pagination"></div>
          {% endif %}
          {% if sst.show_nav %}
            <div class="nav-arrow nav-next pointer"></div>
          {% endif %}
        </div>
      {% endif %}
      
      {% if sst.show_pagination_progress %}
      <div class="d-flex align-items-center mt-40">
        <div class="swiper-scrollbar position-static"></div>
      </div>
      {% endif %}
    </div>
    {% comment %} end product slider {% endcomment %}

    {% if sst.viewall %}
      <div class="text-center">
        <a href="{{ collection.url }}" class="btn mt-50 mt-sm-20">
          <span>{{ 'sections.button.view_all_collection' | t }}</span>
        </a>
      </div>
    {% endif %}

    {% if sst.banner != blank %}
        </div>
      </div>
    {% endif %}

    {% for block in section.blocks %}
      {% if block.type == '@app' %}
        {% render block %}
      {% endif %}
    {% endfor %}
  </div>
</div>
