{%- assign sst = section.settings -%}
{%- assign collection_blog = blogs[sst.blog] -%}
{%- assign blog_limit = sst.limit -%}
{%- style -%}
  {%- assign bg_image = sst.background_image -%}
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ sst.distance_top_xs }}px;
    padding-bottom: {{ sst.distance_bottom_xs }}px;
    padding-left: clamp(0px, {{ sst.px}}px, 15px);
    padding-right: clamp(0px, {{ sst.px}}px, 15px);
    {% if sst.background_color != blank or bg_image != blank %}
      background: {{ sst.background_color }}{% if bg_image != blank %} url("{{ bg_image | image_url: width: 1920 }}"){% endif %} center;
      background-size: cover;
    {% endif %}
  }
  {% if sst.bg_pattern != blank %}
    #shopify-section-{{ section.id }} .distance:before {
      content: "";
      position: absolute;
      background: url("{{ sst.bg_pattern | image_url: width: 1920 }}");
      background-size: contain;
      background-repeat: no-repeat;
      aspect-ratio: 1 / {{ 1 | divided_by: sst.bg_pattern.aspect_ratio }};
      {{ sst.bg_pattern_position }}
    }
  {% endif %}
  @media(min-width: 768px) {
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top_md }}px;
      padding-bottom: {{ sst.distance_bottom_md }}px;
      padding-left: {{ sst.px}}px;
      padding-right: {{ sst.px}}px;
    }
  }
  @media(min-width: 1200px) {
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top_xl }}px;
      padding-bottom: {{ sst.distance_bottom_xl }}px;
    }
  }
  #shopify-section-{{ section.id }} .article__list-image-container {
    border-radius: {{ sst.item_corner_radius }}px;
  }
  {% if sst.show_background %}
    #shopify-section-{{ section.id }} .article--listing {
      border-radius: {{ sst.item_corner_radius }}px;
    }
  {% endif %}
{%- endstyle -%}

<div class="{% if sst.bg_size == 'full' %}distance {% endif %}color-{{ sst.color_section }}{% if sst.class != blank %} {{ sst.class }}{% endif %}{% if sst.animate %} wow fadeInUp animated{% endif %}{% if sst.show_nav %} show-nav{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-slick">
  <div class="{{ sst.container }}">
    <div class="position-relative {% if sst.bg_size == 'container' %} distance{% endif %}">
      {% render 'heading-section', sub_position: sst.subheading_position %}
      <div class="row spacing-{{ sst.spacing }}{% if sst.spacing > 40 %} spacing-xxl-30{% endif %} nov-slick-carousel{% if sst.show_background %} show-bg-item{% endif %}" style="--slider-dot-color: {{ sst.c_dots }}; --slider-dot-color-act: {{ sst.c_dots_a }}"
        data-autoplay="false"
        data-autoplaytimeout="6000"
        data-loop="false"
        data-dots="{{ sst.show_dots }}"
        data-nav="{{ sst.show_nav }}"
        data-row="{{ sst.row_number }}"
        data-row_mobile="1"
        data-items_xxl="{{ sst.xxl }}"
        data-items="{{ sst.xl }}"
        data-items_lg="{{ sst.lg }}"
        data-items_md="{{ sst.md }}"
        data-items_sm="{{ sst.sm }}"
        data-items_xs="1">
        {% for article in collection_blog.articles limit: blog_limit %}
          <div class="item sp-item {% render 'number-to-col' %}">
            <div class="article--listing"> 
              {% if sst.show_image and article.image %}
                <div class="article__list-image-container position-relative mb-15">
                  <a href="{{ article.url }}">
                    {% render 'nov-aspect-image', image: article.image, aspect: 75 %}
                  </a>
                  {% if sst.blog_show_date %}
                    <span class="article__date d-inline-flex align-items-center justify-content-center">
                      <i class="rbb-icon-calendar-1"></i>
                      {{ article.published_at | date: "%b" }} {{ article.published_at | date: "%d" }}, {{ article.published_at | date: "%Y" }}
                    </span>
                  {% endif %}
                </div>
              {% endif %}
              <div class="media-body">
                <div class="d-flex align-items-center justify-content-between mt-25">
                  {% if sst.blog_show_author or sst.blog_show_comments or sst.blog_show_date %}
                    <div class="article_cs">
                      {% if sst.blog_show_author %}
                        <span class="article__author">
                          <i class="rbb-icon-human-user-10"></i>
                          <span>{{ 'sections.blog.by_author' | t }}&nbsp;{{ article.author }}</span>
                        </span>
                      {% endif %}
                      {% if sst.blog_show_comments %}
                        <span class="article__countcomment">
                          {{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}
                        </span>
                      {% endif %}
                    </div>
                  {% endif %}
                </div>
                <div class="article__title font-500 mt-15 f_pr">
                  <a href="{{ article.url }}">{{ article.title | truncate: 70 }}</a>
                </div>
                {% if sst.blog_show_excerpt %}
                  <div class="article__excerpt mt-15">
                    {% if article.excerpt.size > 0 %}
                    {{ article.excerpt | truncate: 110 }}
                    {% else %}
                    {{ article.content | strip_html | truncate: 110 }}
                    {% endif %}
                  </div>
                {% endif %}
                {% if sst.show_redmore %}
                  <a href="{{ article.url }}" class="view_all font-500 d-inline-flex align-items-center mt-20 position-relative">
                    <span class="position-relative">{{ 'sections.button.read_more' | t }}</span>
                    <i class="rbb-icon-direction-55 position-relative"></i>
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
        {% else %}
          {%- for i in (1..4) -%}
            {%- capture current -%}{% cycle 1, 2, 3 %}{%- endcapture -%}
            <div class="item sp-item">
              {{ 'blog-apparel-' | append: current | placeholder_svg_tag : 'placeholder-svg' }}
            </div>
          {%- endfor -%}
        {% endfor %}
      </div>
      {% if sst.show_view_all_blog %}
        <div class="text-center mt-60">
          <a href="{{ collection_blog.url }}" class="btn btn-large">
            <span>{{ 'sections.blog.view_all_blog' | t }}</span>
          </a>
        </div>
      {% endif %}
    </div>
    {% for block in section.blocks %}
      {% if block.type == '@app' %}
        {% render block %}
      {% endif %}
    {% endfor %}
  </div>
</div>
