{%- assign sst = section.settings -%}
{% style %}
  {%- assign bg_image = sst.background_image -%}
  #shopify-section-{{ section.id }} {
    margin-top: {{ sst.mt_xs }}px;
  }
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ sst.distance_top_xs }}px;
    padding-bottom: {{ sst.distance_bottom_xs }}px;
    padding-left: clamp(0px, {{ sst.px}}px, 15px);
    padding-right: clamp(0px, {{ sst.px}}px, 15px);
  }
  {% if sst.background_color != blank or bg_image != blank %}
    #shopify-section-{{ section.id }} .distance:before {
      content: "";
      position: absolute;
      {% if sst.bg_position == 'top' %}
        top: 0;
      {% elsif sst.bg_position == 'center' %}
        top: 50%;
        transform: translateY(-50%);
      {% else %}
        bottom: 0;
      {% endif %}
      left: 0;
      width: 100%;
      background: {{ sst.background_color }}{% if bg_image != blank %} url("{{ bg_image | image_url: width: 1920 }}"){% endif %} no-repeat {{ sst.bg_img_position }} center;
      background-size: cover;
    }
  {% endif %}
  @media(max-width: 575px) {
    #shopify-section-{{ section.id }} .distance:before {
      height: {{ sst.height_background_xs }}%;
    }
  }
  @media(min-width: 576px) and (max-width: 767px) {
    #shopify-section-{{ section.id }} .distance:before {
      height: {{ sst.height_background_sm }}%;
    }
  }
  @media(min-width: 768px) and (max-width: 991px) {
    #shopify-section-{{ section.id }} .distance:before {
      height: {{ sst.height_background_md }}%;
    }
  }
  @media(min-width: 992px) and (max-width: 1199px) {
    #shopify-section-{{ section.id }} .distance:before {
      height: {{ sst.height_background_lg }}%;
    }
  }
  @media(min-width: 1200px) and (max-width: 1440px) {
    #shopify-section-{{ section.id }} .distance:before {
      height: {{ sst.height_background_xl }}%;
    }
  }
  @media(min-width: 1441px) {
    #shopify-section-{{ section.id }} .distance:before {
      height: {{ sst.height_background_xxl }}%;
    }
  }
  @media(min-width: 768px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ sst.mt_md }}px;
    }
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top_md }}px;
      padding-bottom: {{ sst.distance_bottom_md }}px;
      padding-left: {{ sst.px}}px;
      padding-right: {{ sst.px}}px;
    }
  }
  {% if sst.bg_pattern != blank %}
    #shopify-section-{{ section.id }} .pattern1 {
      position: absolute;
      {{ sst.bg_pattern_position }}
    }
  {% endif %}
  {% if sst.bg_pattern2 != blank %}
    #shopify-section-{{ section.id }} .pattern2 {
      position: absolute;
      {{ sst.bg_pattern_position2 }}
    }
  {% endif %}
  @media(min-width: 1200px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ sst.mt_xl }}px;
    }
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top_xl }}px;
      padding-bottom: {{ sst.distance_bottom_xl }}px;
    }
  }
  #shopify-section-{{ section.id }} .collec-title {
    font-size: {{ sst.t_s | divided_by: 10.0 }}rem;
  }
  #shopify-section-{{ section.id }} .sub-collec-title {
    font-size: {{ sst.st_s | divided_by: 10.0 }}rem;
  }
  #shopify-section-{{ section.id }} .collec-desc {
    font-size: {{ sst.d_s | divided_by: 10.0 }}rem;
  }
  #shopify-section-{{ section.id }} .slick-slider .slick-dots button {
    background-color: {{ sst.c_dot }};
  }
  #shopify-section-{{ section.id }} .slick-slider .slick-dots li.slick-active button {
    background-color: {{ sst.c_dot_a }};
  }
  #shopify-section-{{ section.id }} .slider-nav {
    --slider-arrow-color: var(--color-button-text);
    --slider-arrow-bg: var(--color-button);
    --slider-arrow-border: var(--color-button-border);
    --slider-arrow-color-act: var(--color-button-text-hover);
    --slider-arrow-bg-act: var(--color-button-hover);
    --slider-arrow-border-act: var(--color-button-border-hover);
  }
{% endstyle %}
<div class="{% if sst.bg_size == 'full' %}distance {% endif %}position-relative color-{{ sst.color_section }}{% if sst.class_section != blank %} {{ sst.class_section }}{% endif %}{% if sst.animate  %} wow fadeInUp animated{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-slick">
  <div class="{{ sst.container }}">
    <div class="{% if sst.bg_size == 'container' %}distance {% endif %}position-relative" style="--bg: {{ sst.item_background }}; --corner: {% if sst.img_round %}999px{% else %}{{ sst.img_corner }}px{% endif %}">
      {% if sst.bg_pattern != blank %}
        <div class="pattern1">
          {% render 'nov-aspect-image', image: sst.bg_pattern %}
        </div>
      {% endif %}
      {% if sst.bg_pattern2 != blank %}
        <div class="pattern2">
          {% render 'nov-aspect-image', image: sst.bg_pattern2 %}
        </div>
      {% endif %}
      {% render 'heading-section', sub_position: sst.subheading_position %}
      <div class="nov-slick-carousel row slider-shadow spacing-30{% if sst.show_dot %} pb-40{% endif %}{% if sst.show_bg %} show-bg-item{% endif %}{% if sst.show_box_shadow %} show-box-shadow{% endif %}"
        data-autoplay="{{ sst.autoplay }}"
        data-autoplaytimeout="{{ sst.autoplay_speed }}"
        data-loop="true"
        data-nav="{{ sst.show_nav }}"
        data-dots="{{ sst.show_dot }}" 
        data-items_xxl="{{ sst.xxl }}" 
        data-items="{{ sst.xl }}" 
        data-items_lg="{{ sst.lg }}" 
        data-items_md="{{ sst.md }}" 
        data-items_sm="{{ sst.sm }}"
        data-items_xs="{{ sst.xs }}"
        data-row="1"
        {% if sst.one_slider %}data-oneslider="1"{% endif %}>
        {% for block in section.blocks %}
          {% assign bst = block.settings %}
          {% if block.type == 'image' %}
            <div class="block sp-item{% render 'number-to-col' %}">
              <div class="collec-item position-relative text-center">
                {% if bst.image != blank %}
                  {% if sst.img_hexagon %}
                    <div class="item-hexagon style-2" style="--fill: {{ sst.hexagon_fill }};--stroke: {{ sst.hexagon_stroke }};--size: {{ sst.hexagon_size }}%;--dasharray: {{ sst.hexagon_dasharray }}; --fill-second: {{ sst.hexagon_fill_2 }}">
                      {% render 'icon-hexagon' id: section.id | append: forloop.index, stroke_width: sst.hexagon_stroke_width %}
                      {% render 'icon-hexagon' id: section.id | append: 'second' | append: forloop.index, img: bst.image | image_url: width: 600, height: 600, crop: 'center' %}
                    </div>
                  {% else %}
                    {% render 'nov-aspect-image', image: bst.image %}
                  {% endif %}
                {% else %}
                  {%- capture current -%}{% cycle 1, 2, 3, 4 %}{%- endcapture -%}
                  {{ 'collection-apparel-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
                <div class="block-bottom">
                  {% if bst.cta_label != blank %}
                    <div class="collec-title font-700">{{ bst.cta_label }}</div>
                  {% endif %}
                  {% if bst.desc != blank %}
                    <div class="collec-desc mt-5">{{ bst.desc }}</div>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>  
    </div>
    {% for block in section.blocks %}
      {% if block.type == '@app' %}
        {% render block %}
      {% endif %}
    {% endfor %}
  </div><!-- End container -->
</div>
{% if section.blocks.size == 0 %}
  {% render 'no-blocks' %}
{% endif %}

