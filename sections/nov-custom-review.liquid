{% assign sst = section.settings %}
{% style %}
  {%- assign bg_image = sst.background_image -%}
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ sst.distance_top_xs }}px;
    padding-bottom: {{ sst.distance_bottom_xs }}px;
    padding-left: clamp(0px, {{ sst.spacing_horizontal}}px, 15px);
    padding-right: clamp(0px, {{ sst.spacing_horizontal}}px, 15px);
    {% if sst.background_color != blank or bg_image != blank %}
      background: {{ sst.background_color }}{% if bg_image != blank %} url("{{ bg_image | image_url: width: 1920 }}"){% endif %} {{ sst.bg_img_position }} center;
      background-size: {{ sst.bg_img_size }};
    {% endif %}
  }
  
  #shopify-section-{{ section.id }} .container-inner {
    --corner-radius: {{ sst.border_radius }}px;
    --bg: {{ sst.bg }};
    {% if sst.show_border %}
      border: 1px {{ sst.style_border }} var(--color-border);
    {% endif %}
    {% if sst.show_box_shadow %}
      box-shadow: 0 4px 8px rgba(var(--color-shadow-rgb), .08);
      box-shadow: 10px 11px 20px 0 rgba(var(--color-shadow-rgb), .1);
    {% endif %}
  }
  @media(min-width: 768px) {
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top_md }}px;
      padding-bottom: {{ sst.distance_bottom_md }}px;
      padding-left: clamp(0px, {{ sst.spacing_horizontal}}px, 30px);
      padding-right: clamp(0px, {{ sst.spacing_horizontal}}px, 30px);
    }
  }
  @media(min-width: 1200px) {
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top_xl }}px;
      padding-bottom: {{ sst.distance_bottom_xl }}px;
      padding-left: {{ sst.spacing_horizontal }}px;
      padding-right: {{ sst.spacing_horizontal }}px;
    }
  }
{% endstyle %}
{%- liquid 
  assign all_rating = sst.rating_1 | plus: sst.rating_2 | plus: sst.rating_3 | plus: sst.rating_4 | plus: sst.rating_5

  assign rating_5 = sst.rating_5 | times: 5
  assign rating_4 = sst.rating_4 | times: 4
  assign rating_3 = sst.rating_3 | times: 3
  assign rating_2 = sst.rating_2 | times: 2
  assign rating_1 = sst.rating_1 | times: 1
  assign rating_all = all_rating | times: 5
  assign rating_number = rating_5 | plus: rating_4 | plus: rating_3 | plus: rating_2 | plus: rating_1 | append: '.0' | divided_by: rating_all | times: 5 | round: 1
-%}
<div class="{% if sst.bg_size == 'full' %}distance{% endif %} color-{{ sst.color_section }}{% if sst.class_section != blank %} {{ sst.class_section }}{% endif %}{% if sst.animate %} wow fadeInUp animated{% endif %} position-relative" data-section-id="{{ section.id }}" data-section-type="nov-slick">
  <div class="{{ sst.container }}">
    <div class="position-relative{% if sst.bg_size == 'container' %} distance{% endif %}">
      {% render 'heading-section', sub_position: sst.subheading_position %}
      <div class="container-inner position-relative">
        <div class="row align-items-center">
          <div class="col-lg-4 col-12">
            <div class="block-rating color-{{ sst.color_rating }}">
              <div class="block-rating-top text-center">
                {% if sst.rating_title != blank %}
                  <div class="rating-title mb-15">{{ sst.rating_title }}</div>
                {% endif %}
                <div class="rating-number mb-5">{{ 'sections.custom_review.rating_number' | t: number: rating_number  }}</div>
                {% if sst.rating_customer_text != blank %}
                  <div class="rating_customer">{{ sst.rating_customer_text }}</div>
                {% else %}
                  <div class="rating_customer">{{ all_rating }}&nbsp;{{ 'sections.custom_review.customers_reviewed' | t }}</div>
                {% endif %}
              </div>
              <div class="block-rating-bottom">
                {% for i in (1..5) %}
                  {% assign rating_id = 'rating_' | append: i %}
                  {% assign w = sst[rating_id] | times: 100  | times: 1.0 | divided_by: all_rating | round: 1 %}
                  {% assign integer_part = w | floor %}
                  {% assign decimal_part = w | minus: integer_part %}
                  {% if decimal_part >= 0.5 %}
                    {% assign rounded_number = integer_part | plus: 1 %}
                  {% else %}
                    {% assign rounded_number = integer_part %}
                  {% endif %}
                  <div class="number-star d-flex align-items-center {{ rating_id }}">
                    <div class="star star-{{ i }}"></div>
                    <span class="progress" style="--width: {{ rounded_number }}%"></span>
                    <span class="review{% if sst[rating_id] == 0 %} no-review{% endif %}">{{ rounded_number }}%</span>
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
          <div class="col-lg-8 col-12 mt-md-40">
            <div class="nov-slick-carousel row {% if sst.show_border %} show-border{% endif %}{% if sst.show_box_shadow %} show-box-shadow{% endif %}"
              data-autoplay="false" 
              data-autoplayTimeout="6000"
              data-loop="false"
              data-dots="{{ sst.show_dots }}"
              data-nav="false"
              data-row="1"
              data-items_xxl="{{ sst.xxl }}"
              data-items="{{ sst.xl }}"
              data-items_lg="{{ sst.lg }}"
              data-items_md="{{ sst.md }}"
              data-items_sm="1"
              data-items_xs="1">
              {% for block in section.blocks %}
                {% assign bst = block.settings %}
                {% if block.type == 'item' %}
                  <div class="block sp-item">
                    <div class="item">
                      {% if bst.image != blank %}
                        <div class="image d-flex align-items-center justify-content-center mb-25">
                          {% if bst.image != blank %}
                            <div class="img-item">
                              {% render 'nov-aspect-image', image: bst.image, aspect: '11' %}
                            </div>
                          {% endif %}
                        </div>
                      {% endif %}
                      <div class="star star-{{ bst.star }}"></div>
                      {% if bst.title != blank %}
                        <div class="title mt-5">{{ bst.title }}</div>
                      {% endif %}
                      <div class="desc mt-20">{{ bst.desc }}</div>
                      <div class="d-inline-flex mt-15 font-700">
                        {% if bst.name != blank %}
                          <span class="name">{{ bst.name }}{% if bst.info != blank %}&nbsp; - &nbsp;{% endif %}</span>
                        {% endif %}
                        {% if bst.info != blank %}
                          <span class="info">{{ bst.info }}</span>
                        {% endif %}
                      </div>
                    </div>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
        {% for block in section.blocks %}
          {% if block.type == '@app' %}
            {% render block %}
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div><!-- End container -->
</div>
{% if section.blocks.size == 0 %}
  {% render 'no-blocks' %}
{% endif %}

