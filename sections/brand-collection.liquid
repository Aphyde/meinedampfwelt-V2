<section id="brand-collections-{{ section.id }}" class="brand-sec">
  <div class="brand-wrap">
    {% if section.settings.title != blank or section.settings.subtitle != blank %}
      <header class="brand-hero">
        {% if section.settings.title != blank %}
          <h2 class="brand-title">{{ section.settings.title | escape }}</h2>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <p class="brand-subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
      </header>
    {% endif %}
    {% if section.blocks.size > 0 %}
      <ul class="brand-stats">
        {% for b in section.blocks %}
          {% if b.type == 'stat' %}
            <li class="brand-stat" {{ b.shopify_attributes }}>
              {% if b.settings.icon_image != blank %}
                <img
                  class="brand-stat-icon-img"
                  src="{{ b.settings.icon_image | image_url: width: 80 }}"
                  alt="{{ b.settings.label | escape }}"
                  loading="lazy"
                  width="40"
                  height="40"
                >
              {% else %}
                <span class="brand-stat-icon">{{ b.settings.icon }}</span>
              {% endif %}
              <div class="brand-stat-num">{{ b.settings.value }}</div>
              <div class="brand-stat-label">{{ b.settings.label }}</div>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    {% endif %}
    <div class="brand-grid">
      {% for b in section.blocks %}
        {% if b.type == 'brand_card' %}
          {% assign coll = b.settings.collection %}
          {% if coll != blank %}
            {% assign img = coll.image | default: nil %}
            <article class="brand-card" {{ b.shopify_attributes }}>
              <a class="brand-card-link" href="{{ coll.url }}" aria-label="{{ coll.title | escape }}"></a>
              <div class="brand-media">
                {% if img %}
                  <img class="brand-media-img" src="{{ img | image_url: width: 1200 }}" alt="{{ coll.title | escape }}" loading="lazy">
                {% endif %}
                {% if b.settings.rating != blank %}
                  <span class="brand-badge">
                    <svg width="14" height="14" viewBox="0 0 24 24" aria-hidden="true"><path fill="currentColor" d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
                    {{ b.settings.rating }}
                  </span>
                {% endif %}
                <div class="brand-media-title">{{ coll.title }}</div>
              </div>
              <div class="brand-body">
                <div class="brand-meta">
                  {% assign year = b.settings.founded_year | strip %}
                  {% if year != blank %}
                    <span class="brand-meta-label">Gegr√ºndet {{ year }}</span>
                  {% endif %}
                  <span class="brand-meta-arrow" aria-hidden="true">
                    <svg width="18" height="18" viewBox="0 0 24 24"><path fill="currentColor" d="M8 5l8 7-8 7V5z"/></svg>
                  </span>
                </div>
                {% assign desc = b.settings.override_desc | default: coll.description %}
                {% if desc != blank %}
                  <p class="brand-desc">{{ desc | strip_html | strip | truncatewords: 30 }}</p>
                {% endif %}
                <a class="brand-btn" href="{{ coll.url }}">
                  <span>{{ b.settings.button_label }}</span>
                  <svg class="brand-btn-arrow" width="20" height="20" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M5 12h14M13 5l7 7-7 7" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </a>
              </div>
            </article>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>
    {% if section.settings.show_bottom_cta %}
      <div class="brand-bottom-cta">
        <h3 class="brand-bottom-title">{{ section.settings.bottom_title }}</h3>
        <p class="brand-bottom-text">{{ section.settings.bottom_text }}</p>
        <div class="brand-bottom-actions">
          <a href="{{ section.settings.bottom_primary_url }}" class="brand-bottom-btn brand-bottom-btn--primary">{{ section.settings.bottom_primary_label }}</a>
          <a href="{{ section.settings.bottom_secondary_url }}" class="brand-bottom-btn">{{ section.settings.bottom_secondary_label }}</a>
        </div>
      </div>
    {% endif %}
  </div>
  <style>
  :root{
    --bg: transparent;
    --card:#ffffff;
    --text:#0d1117;
    --muted:#667085;
    --border:rgba(2,6,23,.08);
    --shadow:0 8px 20px rgba(2,6,23,.08);
    --radius:16px;
    --pink:#0D283A;
    --pink-text:#ABCA20;
    --pill:#eef1f4;
    --accent:#0D283A;
  }
  #brand-collections-{{ section.id }}{
    background: transparent !important;
    color: var(--text);
    padding: 60px 0 80px;
    position: relative;
    overflow: hidden;
    font-family: 'Poppins', system-ui, -apple-system, sans-serif;
  }

  .brand-wrap {
    width: min(1200px, 92vw);
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  /* Hero */
  .brand-title {
    text-align: center;
    font-size: clamp(28px, 3.5vw, 42px);
    font-weight: 800;
    color: var(--brand-green, #ABCA20);
    letter-spacing: 0.02em;
    margin-bottom: 10px;
    font-family: 'Orbitron', sans-serif;
  }
  .brand-subtitle {
    text-align: center;
    color: var(--muted);
    max-width: 780px;
    margin: 0 auto 36px;
    font-size: 16px;
    line-height: 1.6;
    font-family: 'Poppins', sans-serif;
  }

  /* Stats */
  .brand-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 22px;
    margin-bottom: 50px;
    padding: 0;
    list-style: none;
  }
  .brand-stat {
    text-align: center;
    background: var(--dark-card, #1C1D22);
    border: 1px solid var(--border, #2A2D33);
    border-radius: var(--radius);
    padding: 24px 20px;
    transition: all 0.25s ease;
    box-shadow: var(--shadow);
  }
  .brand-stat:hover {
    border-color: rgba(171, 202, 32, 0.45);
    box-shadow: 0 10px 28px rgba(171, 202, 32, 0.25);
    transform: translateY(-3px);
  }
  .brand-stat-icon {
    font-size: 28px;
    margin-bottom: 8px;
    display: inline-block;
    line-height: 1;
  }
  .brand-stat-icon-img {
    width: 40px;
    height: 40px;
    object-fit: contain;
    margin-bottom: 8px;
    display: inline-block;
  }
  .brand-stat-num {
    font-weight: 800;
    font-size: 24px;
    color: var(--brand-green, #ABCA20);
    font-family: 'Orbitron', sans-serif;
  }
  .brand-stat-label {
    font-size: 14px;
    color: var(--muted);
    font-family: 'Poppins', sans-serif;
  }

  /* Grid */
  .brand-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 26px;
  }

  /* Cards */
  .brand-card {
    position: relative;
    background: var(--dark-card, #1C1D22);
    border: 1px solid var(--border, #2A2D33);
    border-radius: var(--radius);
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }
  .brand-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(171, 202, 32, 0.25);
    border-color: rgba(171, 202, 32, 0.35);
  }
  .brand-media {
    height: 200px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #0e0f12;
  }
  .brand-media-img {
    max-width: 90%;
    max-height: 100%;
    object-fit: contain;
    transition: transform 0.3s ease;
  }
  .brand-card:hover .brand-media-img {
    transform: scale(1.05);
  }
  .brand-media-title {
    position: absolute;
    left: 14px;
    bottom: 12px;
    color: #fff;
    font-weight: 800;
    font-size: 18px;
    text-shadow: 0 2px 6px rgba(0, 0, 0, 0.5);
    font-family: 'Orbitron', sans-serif;
  }
  .brand-badge {
    position: absolute;
    right: 12px;
    top: 12px;
    display: inline-flex;
    align-items: center;
    gap: 5px;
    background: rgba(0, 0, 0, 0.6);
    color: var(--brand-green, #ABCA20);
    border-radius: 999px;
    padding: 4px 8px;
    font-size: 12px;
    font-weight: 700;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    font-family: 'Orbitron', sans-serif;
  }

  /* Card Body */
  .brand-body {
    padding: 20px;
  }
  .brand-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12px;
    color: var(--muted);
    font-size: 13px;
    font-family: 'Poppins', sans-serif;
  }
  .brand-meta-label {
    background: rgba(171, 202, 32, 0.1);
    color: var(--brand-green, #ABCA20);
    padding: 6px 10px;
    border-radius: 999px;
    font-weight: 700;
    border: 1px solid rgba(171, 202, 32, 0.25);
    font-family: 'Poppins', sans-serif;
  }
  .brand-desc {
    color: var(--muted);
    font-size: 14px;
    line-height: 1.55;
    margin: 0 0 18px;
    min-height: 56px;
    font-family: 'Poppins', sans-serif;
  }

  /* Button */
  .brand-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    width: 100%;
    padding: 12px 16px;
    background: var(--brand-green, #ABCA20);
    color: #0e1208;
    font-weight: 700;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.25s ease;
    font-family: 'Poppins', sans-serif;
  }
  .brand-btn:hover {
    background: var(--brand-green-hover, #9EC114);
    transform: translateY(-1px);
    box-shadow: 0 10px 22px rgba(171, 202, 32, 0.35);
  }
  .brand-btn-arrow {
    transition: transform 0.2s ease;
  }
  .brand-btn:hover .brand-btn-arrow {
    transform: translateX(3px);
  }

  /* CTA unten */
  .brand-bottom-cta {
    background: var(--dark-card, #1C1D22);
    border: 1px solid var(--border, #2A2D33);
    border-radius: 18px;
    text-align: center;
    margin-top: 60px;
    padding: 40px 20px;
    box-shadow: var(--shadow);
  }
  .brand-bottom-title {
    font-size: clamp(20px, 2.5vw, 28px);
    font-weight: 800;
    color: var(--brand-green, #ABCA20);
    margin-bottom: 10px;
    font-family: 'Orbitron', sans-serif;
  }
  .brand-bottom-text {
    color: var(--muted);
    max-width: 700px;
    margin: 0 auto 24px;
    line-height: 1.6;
    font-family: 'Poppins', sans-serif;
  }
  .brand-bottom-actions {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 12px;
  }
  .brand-bottom-btn {
    border: 1px solid var(--border, #2A2D33);
    background: transparent;
    color: var(--text, #E9EDF3);
    border-radius: 12px;
    padding: 12px 18px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.25s ease;
    font-family: 'Poppins', sans-serif.
  }
  .brand-bottom-btn:hover {
    background: rgba(171, 202, 32, 0.15);
    border-color: rgba(171, 202, 32, 0.35);
    color: var(--brand-green, #ABCA20);
  }
  .brand-bottom-btn--primary {
    background: var(--brand-green, #ABCA20);
    color: #0e1208;
    border: none;
    font-family: 'Orbitron', sans-serif;
  }
  .brand-bottom-btn--primary:hover {
    background: var(--brand-green-hover, #9EC114);
    box-shadow: 0 8px 22px rgba(171, 202, 32, 0.35);
  }

  /* Responsive */
  @media (max-width: 980px) {
    .brand-stats, .brand-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (max-width: 620px) {
    .brand-stats, .brand-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Variablen f√ºr Dark Mode */
  #brand-collections-{{ section.id }} {
    --brand-green: #ABCA20;
    --brand-green-hover: #9EC114;
    --dark-bg: #111315;
    --dark-card: #1C1D22;
    --border: #2A2D33;
    --text: #E9EDF3;
    --muted: #A4ADBA;
    --radius: 16px;
    --shadow: 0 8px 24px rgba(0, 0, 0, 0.35);
  }
  /* === Brand-Card: noch kleinere Bilder + schwarzer Hintergrund === */
#brand-collections-{{ section.id }} .brand-media{
  background: #000;              /* Schwarzer Hintergrund */
  height: 200px;                 /* kann bei Bedarf z. B. 180px werden */
  display: flex;
  align-items: center;
  justify-content: center;
}

#brand-collections-{{ section.id }} .brand-media-img{
  max-width: 55%;                /* vorher 68 % ‚Üí jetzt deutlich kleiner */
  max-height: 70%;               /* vorher 78 % */
  object-fit: contain;
  transition: transform .3s ease;
}

#brand-collections-{{ section.id }} .brand-card:hover .brand-media-img{
  transform: scale(1.05);        /* sanfter Hover-Zoom */
}

/* Optional: auf kleineren Screens etwas gr√∂√üer f√ºr Lesbarkeit */
@media (max-width: 620px){
  #brand-collections-{{ section.id }} .brand-media{
    height: 160px;
  }
  #brand-collections-{{ section.id }} .brand-media-img{
    max-width: 55%;
    max-height: 65%;
  }
}

</style>
</section>

