{% assign sst = section.settings %}
{% style %}
  {%- assign bg_image = sst.background_image -%}
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ sst.distance_top_xs }}px;
    padding-bottom: {{ sst.distance_bottom_xs }}px;
    padding-left: clamp(0px, {{ sst.px}}px, 15px);
    padding-right: clamp(0px, {{ sst.px}}px, 15px);
    margin-top: {{ sst.mt_xs }}px;
  }
  {% if sst.background_color != blank or bg_image != blank %}
    #shopify-section-{{ section.id }} .distance:before {
      content: "";
      position: absolute;
      {% if sst.bg_position == 'top' %}
        top: 0;
      {% elsif sst.bg_position == 'center' %}
        top: 50%;
        transform: translateY(-50%);
      {% else %}
        bottom: 0;
      {% endif %}
      left: 0;
      width: 100%;
      height: {{ sst.height_background }}%;
      background: {{ sst.background_color }}{% if bg_image != blank %} url("{{ bg_image | image_url: width: 1920 }}"){% endif %} no-repeat {{ sst.bg_img_position }} center;
      background-size: cover;
    }
  {% endif %}
  @media(min-width: 768px) {
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top_md }}px;
      padding-bottom: {{ sst.distance_bottom_md }}px;
      padding-left: {{ sst.px}}px;
      padding-right: {{ sst.px}}px;
      margin-top: {{ sst.mt_md }}px;
    }
  }
  @media(min-width: 1200px) {
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top_xl }}px;
      padding-bottom: {{ sst.distance_bottom_xl }}px;
      margin-top: {{ sst.mt_xl }}px;
    }
  }
  #shopify-section-{{ section.id }} .image-content:before, #shopify-section-{{ section.id }} .el-parallax:before {
    background: rgba(0, 0, 0, {{ sst.image_overlay_opacity }}%);
  }
  #shopify-section-{{ section.id }} .distance {
    --radius: {{ sst.corner_radius }}px;
    --position-X: {{ sst.positionX }}%;
    --width: {{ sst.width }}%;
    --url: url({{ sst.image | image_url: width: 1920 }});
    --h-xxxl: {{ sst.h_xxxl }}px;
    --h-xxl: {{ sst.h_xxl }}px;
    --h-xl: {{ sst.h_xl }}px;
    --h-lg: {{ sst.h_lg }}px;
    --h-md: {{ sst.h_md }}px;
    --h-sm: {{ sst.h_sm }}px;
    --h-xs: {{ sst.h_xs }}px;
  }
  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
      {% assign bst = block.settings %}
      #shopify-section-{{ section.id }} .block-{{ forloop.index }} {
        --mb-xs: {{ bst.distance_bottom_xs }}px;
        --mb-md: {{ bst.distance_bottom_md }}px;
        --mb-lg: {{ bst.distance_bottom_lg }}px;
        --mb-xl: {{ bst.distance_bottom_xl }}px;
      }
      {% if block.type == 'text' %}
        #shopify-section-{{ section.id }} .block-{{ forloop.index }}.nov-text {
          --color: {{ bst.t_c }};
          --font-size: {{ bst.t_s | divided_by: 10.0 }}rem;
          --font-size-lg: {{ bst.t_s_lg | divided_by: 10.0 }}rem;
          --font-size-md: {{ bst.t_s_md | divided_by: 10.0 }}rem;
          --line-height: {{ bst.t_lh }};
          --letter-spacing: {{ bst.t_lt }}px;
          --max-width: {{ bst.t_m }}px;
          --color-link-hover:  {{ bst.c_link_h }};
          --color-bold: {{ bst.tb_c }};
        }
      {% endif %}
      {% if block.type == 'btn' %}
        #shopify-section-{{ section.id }} .block-{{ forloop.index }} .btn {
          color: {{ bst.c_btn }};
          background-color: {{ bst.b_btn }};
          border-color: {{ bst.bd_btn }};
        }
        #shopify-section-{{ section.id }} .block-{{ forloop.index }} .btn:hover {
          color: {{ bst.c_btn_h }} !important;
          background-color: {{ bst.b_btn_h }} !important;
          border-color: {{ bst.bd_btn_h }} !important;
        }
      {% endif %}
      {% if block.type == 'image' %}
        #shopify-section-{{ section.id }} .block-{{ forloop.index }} {
          max-width: {{ bst.c_m }}px;
        }
      {% endif %}
    {% endfor %}
  {% endif %}
{% endstyle %}
<div class="{% if sst.bg_size == 'full' %}distance position-relative overflow_hidden{% if sst.class != blank %} {{ sst.class }}{% endif %}{% endif %}">
  <div class="{{ sst.container }}">
    <div class="{% if sst.parallax %}image-content{% endif %}{% if sst.bg_size == 'container' %}distance position-relative overflow_hidden{% if sst.class != blank %} {{ sst.class }}{% endif %}{% endif %}">
      {% if sst.parallax %}
        <div class="el-parallax"></div>
      {% endif %}
      {% if section.blocks.size > 0 %}
        <div class="block-text position-absolute {{ sst.position }} {{ sst.alignment }}">
          {% for block in section.blocks %}
            {% assign bst = block.settings %}
            {% if block.type == 'text' %}
              <div class="block-item nov-text block-{{ forloop.index }} {{ bst.t_fw }} {{ bst.ff }} {{ bst.t_tt }}{% if sst.animate %} wow fadeInUp{% endif %}" data-wow-delay="{{ forloop.index | times: 0.1 }}s">{{ bst.text }}</div>
            {% endif %}
            {% if block.type == 'btn' %}
              <div class="block-item block-btn block-{{ forloop.index }}{% if sst.animate %} wow fadeInUp{% endif %}" data-wow-delay="{{ forloop.index | times: 0.1 }}s">
                {% if bst.btn != blank %}
                  <a href="{{ bst.btn_link }}" class="btn {{ bst.btn_size }}">
                    <span>{{ bst.btn }}</span>
                  </a>
                {% endif %}
              </div>
            {% endif %}
            {% if block.type == 'image' %}
              <div class="block-item images d-flex block-{{ forloop.index }}{% if sst.animate %} wow fadeInUp{% endif %}{% if bst.img_animate %} img_animate{% endif %}" data-wow-delay="{{ forloop.index | times: 0.1 }}s">
                <div class="item-image w-100 layer" data-depth="0.7">
                  {% if bst.img1l != blank %}
                    <a href="{{ bst.img1l }}">
                  {% endif %}
                  {% render 'nov-aspect-image', image: bst.img1 %}
                  {% if bst.img1l != blank %}
                    </a>
                  {% endif %}
                </div>
              </div>
            {% endif %}
            {% if block.type == '@app' %}
              {% render block %}
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
      {% unless sst.parallax %}
        <div class="image-content overflow_hidden position-relative{% if sst.animate %} wow fadeInUp{% endif %}">
          <div class="nov-sh-image-2 w-100">
            {% if sst.link != blank %}
              <a href="{{ sst.btn_link }}">
            {% endif %}
            <img data-src="{{ sst.image | image_url: width: 1920 }}" class="lazyload img-fluid" alt="{{ sst.image.alt | default: 'image' }}" width="{{ sst.image.width }}" height="{{ sst.image.height }}">
            {% if sst.link != blank %}
              </a>
            {% endif %}
          </div>
        </div>
      {% endunless %}
      {% if sst.pattern_bottom %}
        <div class="pattern-bottom position-absolute bottom-center d-flex" style="color: {{ sst.pattern_color }}">
          {% render 'icon-wave' %}
        </div>
      {% endif %}
    </div>
  </div>
</div>
