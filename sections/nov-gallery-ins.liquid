{%- assign sst = section.settings -%}
{%- assign xl = 100 | divided_by: sst.xl -%}
{%- assign lg = 100 | divided_by: sst.lg -%}
{%- assign md = 100 | divided_by: sst.md -%}
{%- assign sm = 100 | divided_by: sst.sm -%}
{%- if settings.lang_iso_rtl != blank -%}
  {% assign list_iso_rtl = settings.lang_iso_rtl | downcase %}
  {% if list_iso_rtl contains request.locale.iso_code %}
    {% assign iso_rtl = true %}
  {% else %}
    {% assign iso_rtl = false %}
  {% endif %}
{%- endif -%}
{% style %}
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ sst.distance_top_xs }}px;
    padding-bottom: {{ sst.distance_bottom_xs }}px;
    padding-left: clamp(0px, {{ sst.px}}px, 15px);
    padding-right: clamp(0px, {{ sst.px}}px, 15px);
    {% if sst.background_color != blank %}
      background-color: {{ sst.background_color }};
    {% endif %}
  }
  @media(min-width: 768px) {
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top_md }}px;
      padding-bottom: {{ sst.distance_bottom_md }}px;
      padding-left: {{ sst.px}}px;
      padding-right: {{ sst.px}}px;
    }
  }
  @media(min-width: 1200px) {
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top_xl }}px;
      padding-bottom: {{ sst.distance_bottom_xl }}px;
    }
  }
  #shopify-section-{{ section.id }} .nov-ins-slider:first-child {
    {% if settings.enable_rtl and iso_rtl %}margin-left{% else %}margin-right{% endif %}: {{ sst.spacing | divided_by: 2 }}px;
  }
  #shopify-section-{{ section.id }} .nov-ins-slider {
    animation-duration: {{ sst.time }}s;
  }
  #shopify-section-{{ section.id }} .card_gallery {
    border-radius: {{ sst.border_radius }}px;
  }
  #shopify-section-{{ section.id }} .gallery--content {
    width: 33.3333vw;
    flex: 0 0 33.3333vw;
  }
  @media(min-width:  576px) {
    #shopify-section-{{ section.id }} .gallery--content {
      width: {{ sm | append: 'vw' }};
      flex: 0 0 {{ sm | append: 'vw' }};
    }
  }
  @media(min-width:  768px) {
    #shopify-section-{{ section.id }} .gallery--content {
      width: {{ md | append: 'vw' }};
      flex: 0 0 {{ md | append: 'vw' }};
    }
  }
  @media(min-width:  992px) {
    #shopify-section-{{ section.id }} .gallery--content {
      width: {{ lg | append: 'vw' }};
      flex: 0 0 {{ lg | append: 'vw' }};
    }
  }
  @media(min-width:  1200px) {
    #shopify-section-{{ section.id }} .gallery--content {
      width: {{ xl | append: 'vw' }};
      flex: 0 0 {{ xl | append: 'vw' }};
    }
  }
{% endstyle %}

<div class="{% if sst.bg_size == 'full' %}distance{% if sst.class != blank %} {{ sst.class }}{% endif %}{% endif %}{% if sst.animate %} wow fadeInUp{% endif %}">
  <div class="{{ sst.container }} position-relative">
    {% render 'heading-section', sub_position: sst.subheading_position %}
    <div class="{% if sst.bg_size == 'container' %}distance{% if sst.class != blank %} {{ sst.class }}{% endif %}{% endif %}">
      <div class="nov-ins-block d-flex flex-nowrap">
        <div class="nov-ins-slider row spacing-{{ sst.spacing }} flex-nowrap">
          {% for block in section.blocks %}
            <div class="gallery--content sp-item">
              {% if block.type == 'image' %}
                <div class="card_gallery hover-image d-block overflow_hidden">
                  <a href="{{ block.settings.image | image_url: width: 1200 }}" class="d-block" data-fancybox="gallery">
                    {% if block.settings.image != blank %}
                      {% render 'nov-aspect-image', image: block.settings.image, aspect: '11' %}
                      <i class="fa fa-instagram" aria-hidden="true"></i>
                    {% else %}
                      {%- capture current -%}{% cycle 1, 2, 3, 4 %}{%- endcapture -%}
                      {{ 'collection-apparel-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                  </a>
                </div>
              {% endif %}
              {% if block.type == '@app' %}
                {% render block %}
              {% endif %}
            </div>
          {% endfor %}
        </div>
        <div class="nov-ins-slider row spacing-{{ sst.spacing }} flex-nowrap">
          {% for block in section.blocks %}
            <div class="gallery--content sp-item">
              {% if block.type == 'image' %}
                <div class="card_gallery hover-image d-block overflow_hidden">
                  <a href="{{ block.settings.image | image_url: width: 1200 }}" class="d-block" data-fancybox="gallery">
                    {% if block.settings.image != blank %}
                      {% render 'nov-aspect-image', image: block.settings.image, aspect: '11' %}
                      <i class="fa fa-instagram" aria-hidden="true"></i>
                    {% else %}
                      {%- capture current -%}{% cycle 1, 2, 3, 4 %}{%- endcapture -%}
                      {{ 'collection-apparel-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                  </a>
                </div>
              {% endif %}
              {% if block.type == '@app' %}
                {% render block %}
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Gallery Instagram",
  "class": "section-gallery-ins overflow_hidden",
  "settings":[
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<p>Vinova Instagram</p>"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#222222"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Sub heading",
      "default": "<p>Subtitle from happy customers</p>"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Sub heading color",
      "default": "#666666"
    },
    {
      "type": "richtext",
      "id": "descheading",
      "label": "Description",
      "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>"
    },
    {
      "type": "color",
      "id": "descheading_color",
      "label": "Description color",
      "default": "#666666"
    },
    {
      "type": "select",
      "id": "subheading_position",
      "label": "Sub heading position",
      "default": "bottom",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ]
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "default": "text-left",
      "options": [
        {
          "value": "text-left",
          "label": "Left"
        },
        {
          "value": "text-center",
          "label": "Center"
        },
        {
          "value": "text-right",
          "label": "Right"
        }
      ]
    },
    {
      "type":  "header",
      "content": "Slider option"
    },
    {
      "type": "range",
      "id": "time",
      "min": 5,
      "max": 60,
      "step": 1,
      "unit": "s",
      "label": "Slide run time",
      "default": 10
    },
    {
      "type":  "header",
      "content": "Image item per row"
    },
    {
      "type": "range",
      "id": "xl",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Large desktop",
      "default": 6,
      "info": "Breakpoint 1200px ↑"
    },
    {
      "type": "range",
      "id": "lg",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Desktop",
      "default": 3,
      "info": "Breakpoint 992px ↑"
    },
    {
      "type": "range",
      "id": "md",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Tablet",
      "default": 3,
      "info": "Breakpoint 768px ↑"
    },
    {
      "type": "range",
      "id": "sm",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Mobile",
      "default": 2,
      "info": "Breakpoint 576px ↑"
    },
    {
      "type": "range",
      "id": "spacing",
      "min": 0,
      "max": 60,
      "step": 5,
      "label": "Spacing items",
      "default": 10
    },
    {
      "type": "header",
      "content": "Design options"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Border radius item",
      "default": 0,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "animate",
      "label": "Show animated",
      "default": true
    },
    {
      "type": "select",
      "id": "container",
      "label": "Container",
      "default": "container",
      "options": [
        { "value": "container", "label": "Container" },
        { "value": "container-fluid", "label": "Container fluid" },
        { "value": "container-full", "label": "Container full width" }
      ]
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background colors"
    },
    {
      "type": "select",
      "id": "bg_size",
      "label": "Background size",
      "default": "full",
      "options": [
        { "value": "full", "label": "Full" },
        { "value": "container", "label": "Container"}
      ]
    },
    {
      "type": "text",
      "id": "class",
      "label": "Class"
    },
    {
      "type": "number",
      "id": "px",
      "label": "Horizontally spacing section (px)",
      "default": 0
    },
    {
      "type": "header",
      "content": "Spacing top (px)"
    },
    {
      "type": "number",
      "id": "distance_top_xl",
      "label": "Large laptop",
      "default": 30,
      "info": "Breakpoint 1200px"
    },
    {
      "type": "number",
      "id": "distance_top_md",
      "label": "Tablet",
      "default": 30,
      "info": "Breakpoint 768px"
    },
    {
      "type": "number",
      "id": "distance_top_xs",
      "label": "Mobile",
      "default": 30
    },
    {
      "type": "header",
      "content": "Spacing bottom (px)"
    },
    {
      "type": "number",
      "id": "distance_bottom_xl",
      "label": "Large laptop",
      "default": 30,
      "info": "Breakpoint 1200px"
    },
    {
      "type": "number",
      "id": "distance_bottom_md",
      "label": "Tablet",
      "default": 30,
      "info": "Breakpoint 768px"
    },
    {
      "type": "number",
      "id": "distance_bottom_xs",
      "label": "Mobile",
      "default": 30
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "1200px recommend"
        }
      ]
    },
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Vinova Gallery Instagram",
      "category": "Image",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}