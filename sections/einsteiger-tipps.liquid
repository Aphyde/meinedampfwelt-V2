{% comment %}
  Section: mdw-einsteiger-guide
  Purpose: Voll editierbare Einsteiger-Page (Farben, Texte, Links, Tabellen, Tiles, Fehlerkarten, CTA)
  Drop in: sections/mdw-einsteiger-guide.liquid
{% endcomment %}
<section id="mdw-einsteiger-guide-{{ section.id }}" class="mdw-einsteiger-guide">
  {%- assign s = section.settings -%}
  <style>
    #mdw-einsteiger-guide-{{ section.id }}{
      --brand-primary: {{ s.color_primary }};
      --brand-primary-600: {{ s.color_primary_dark }};
      --brand-primary-100: {{ s.color_primary_light }};
      --ink: {{ s.color_headline }};
      --text: {{ s.color_text }};
      --muted: {{ s.color_muted }};
      --bg: {{ s.color_bg }};
      --surface: {{ s.color_surface }};
      --border: {{ s.color_border }};
      --ok: {{ s.color_ok }};
      --warn: {{ s.color_warn }};
      --bad: {{ s.color_bad }};
      --shadow: 0 10px 30px rgba(16,24,40,.06);
      --radius: 16px; --r-md: 14px; --r-lg: 20px; --r-xl: 28px;
      --table-head: {{ s.color_table_head }};
    }
    #mdw-einsteiger-guide-{{ section.id }} *{box-sizing:border-box}
    #mdw-einsteiger-guide-{{ section.id }}{background:var(--bg);color:var(--text);line-height:1.65}
    #mdw-einsteiger-guide-{{ section.id }} .container{max-width:{{ s.max_width }}px;margin:0 auto;padding:0 20px}
    #mdw-einsteiger-guide-{{ section.id }} a{color:var(--brand-primary);text-decoration:underline;text-underline-offset:2px}
    #mdw-einsteiger-guide-{{ section.id }} h1,#mdw-einsteiger-guide-{{ section.id }} h2,#mdw-einsteiger-guide-{{ section.id }} h3{color:var(--ink)}
    /* Buttons */
    #mdw-einsteiger-guide-{{ section.id }} .btn{display:inline-flex;align-items:center;justify-content:center;gap:.6rem;background:var(--brand-primary);color:#fff;font-weight:700;border-radius:999px;padding:14px 20px;box-shadow:var(--shadow);text-decoration:none;transition:.2s}
    #mdw-einsteiger-guide-{{ section.id }} .btn:hover{background:var(--brand-primary-600);transform:translateY(-1px)}
    #mdw-einsteiger-guide-{{ section.id }} .btn.ghost{background:#fff;color:var(--brand-primary);border:1px solid color-mix(in srgb, var(--brand-primary) 30%, #fff)}
    /* HERO */
    #mdw-einsteiger-guide-{{ section.id }} .hero{padding:{{ s.space_y_hero }}px 0 {{ s.space_y_hero | divided_by: 3 }}px;background:linear-gradient(180deg,var(--surface),#fff)}
    #mdw-einsteiger-guide-{{ section.id }} .badge{display:inline-flex;align-items:center;gap:.5rem;background:var(--brand-primary-100);color:var(--brand-primary-600);border:1px solid color-mix(in srgb, var(--brand-primary) 15%, #dfe);padding:.35rem .75rem;border-radius:999px;font-weight:600;font-size:.9rem}
    #mdw-einsteiger-guide-{{ section.id }} .hero h1{font-size:clamp(34px,4.8vw,{{ s.h1_size }}px);line-height:1.1;margin:.6rem 0 .8rem}
    #mdw-einsteiger-guide-{{ section.id }} .hero p{max-width:880px;font-size:1.08rem;color:var(--muted)}
    #mdw-einsteiger-guide-{{ section.id }} .hero-cta{display:flex;gap:12px;flex-wrap:wrap;margin-top:18px}
    /* Quick Nav */
    #mdw-einsteiger-guide-{{ section.id }} .quicknav{display:grid;grid-template-columns:repeat(4,1fr);gap:16px;margin:26px 0 0}
    #mdw-einsteiger-guide-{{ section.id }} .q{display:flex;align-items:center;gap:.9rem;background:#fff;border:1px solid var(--border);border-radius:var(--radius);padding:12px 14px;box-shadow:var(--shadow)}
    #mdw-einsteiger-guide-{{ section.id }} .q .num{width:36px;height:36px;border-radius:12px;background:var(--brand-primary-100);color:var(--brand-primary-600);display:grid;place-items:center;font-weight:800}
    #mdw-einsteiger-guide-{{ section.id }} .q span{font-weight:700;color:var(--brand-primary-600)}
    /* Section */
    #mdw-einsteiger-guide-{{ section.id }} section.section{padding:{{ s.space_y_section }}px 0}
    #mdw-einsteiger-guide-{{ section.id }} section.section.alt{background:var(--surface)}
    #mdw-einsteiger-guide-{{ section.id }} .lead{color:var(--muted);max-width:860px}
    /* Cards grid */
    #mdw-einsteiger-guide-{{ section.id }} .grid3{display:grid;grid-template-columns:repeat(3,1fr);gap:22px}
    #mdw-einsteiger-guide-{{ section.id }} .card{background:#fff;border:1px solid var(--border);border-radius:var(--radius);padding:20px;box-shadow:var(--shadow)}
    #mdw-einsteiger-guide-{{ section.id }} .card h3{margin:.2rem 0 .35rem}
    #mdw-einsteiger-guide-{{ section.id }} .meta{font-size:.96rem;color:var(--muted)}
    /* Table */
    #mdw-einsteiger-guide-{{ section.id }} .table-wrap{overflow:auto;border:1px solid var(--border);border-radius:var(--radius);background:#fff;box-shadow:var(--shadow)}
    #mdw-einsteiger-guide-{{ section.id }} table.tbl{border-collapse:collapse;width:100%;min-width:820px}
    #mdw-einsteiger-guide-{{ section.id }} .tbl th,.tbl td{padding:14px 16px;border-top:1px solid var(--border);text-align:left;vertical-align:top}
    #mdw-einsteiger-guide-{{ section.id }} .tbl thead th{background:var(--table-head);font-weight:700}
    #mdw-einsteiger-guide-{{ section.id }} .tbl tbody tr:hover td{background:#fafafa}
    #mdw-einsteiger-guide-{{ section.id }} .chip{display:inline-flex;align-items:center;gap:.45rem;border:1px solid var(--border);border-radius:999px;padding:.15rem .55rem;font-size:.83rem}
    #mdw-einsteiger-guide-{{ section.id }} .chip.tag{background:{{ s.color_chip_bg }};border-color:{{ s.color_chip_border }};color:{{ s.color_chip_text }}}
    /* Two columns */
    #mdw-einsteiger-guide-{{ section.id }} .two{display:grid;grid-template-columns:1.1fr .9fr;gap:26px}
    #mdw-einsteiger-guide-{{ section.id }} .panel{background:#fff;border:1px solid var(--border);border-radius:var(--radius);padding:20px;box-shadow:var(--shadow)}
    /* Nicotine tiles */
    #mdw-einsteiger-guide-{{ section.id }} .nicobox{margin-top:24px;background:linear-gradient(180deg,{{ s.color_nico_grad_start }},{{ s.color_nico_grad_end }});border:1px solid {{ s.color_nico_border }};border-radius:var(--r-lg);padding:18px;box-shadow:var(--shadow)}
    #mdw-einsteiger-guide-{{ section.id }} .tiles{display:grid;grid-template-columns:repeat(4,1fr);gap:14px;margin-top:14px}
    #mdw-einsteiger-guide-{{ section.id }} .tile{background:#fff;border:1px solid var(--border);border-radius:14px;padding:16px;box-shadow:var(--shadow);text-align:center}
    #mdw-einsteiger-guide-{{ section.id }} .tile .pill{display:inline-block;background:#f2f4f7;border:1px solid #e5e7eb;border-radius:999px;padding:.15rem .5rem;font-size:.8rem;margin-bottom:10px}
    #mdw-einsteiger-guide-{{ section.id }} .tile.active{outline:2px solid {{ s.color_nico_active_outline }}}
    #mdw-einsteiger-guide-{{ section.id }} .tile.active .pill{background:{{ s.color_nico_active_pill }};color:#0b2a00;border-color:color-mix(in srgb, {{ s.color_nico_active_pill }} 90%, #0000)}
    /* Fehler-Sektion */
    #mdw-einsteiger-guide-{{ section.id }} .errgrid{display:grid;grid-template-columns:repeat(3,1fr);gap:22px}
    #mdw-einsteiger-guide-{{ section.id }} .err{border-radius:var(--radius);border:1px solid var(--border);box-shadow:var(--shadow);overflow:hidden}
    #mdw-einsteiger-guide-{{ section.id }} .err.red{background:linear-gradient(180deg,{{ s.color_err_red_start }},{{ s.color_err_red_end }})}
    #mdw-einsteiger-guide-{{ section.id }} .err.orange{background:linear-gradient(180deg,{{ s.color_err_orange_start }},{{ s.color_err_orange_end }})}
    #mdw-einsteiger-guide-{{ section.id }} .err.yellow{background:linear-gradient(180deg,{{ s.color_err_yellow_start }},{{ s.color_err_yellow_end }})}
    #mdw-einsteiger-guide-{{ section.id }} .err .hd{display:flex;align-items:center;gap:.6rem;padding:14px 16px;font-weight:800}
    #mdw-einsteiger-guide-{{ section.id }} .err .hd .ico{width:28px;height:28px;border-radius:999px;background:#1118270d;display:grid;place-items:center}
    #mdw-einsteiger-guide-{{ section.id }} .err .hd .ico svg{width:16px;height:16px;stroke:#111827;fill:none;stroke-width:2;stroke-linecap:round;stroke-linejoin:round}
    #mdw-einsteiger-guide-{{ section.id }} .err .body{display:grid;gap:12px;padding:0 16px 16px}
    /* Callout */
    #mdw-einsteiger-guide-{{ section.id }} .callout{margin-top:26px;background:linear-gradient(90deg,{{ s.color_tip_grad_start }},{{ s.color_tip_grad_end }});border:1px solid {{ s.color_tip_border }};border-radius:var(--r-xl);padding:22px;text-align:center;box-shadow:var(--shadow)}
    #mdw-einsteiger-guide-{{ section.id }} .callout .info{width:42px;height:42px;border-radius:999px;margin:0 auto 10px;background:{{ s.color_tip_icon_bg }};display:grid;place-items:center}
    #mdw-einsteiger-guide-{{ section.id }} .callout .info svg{width:20px;height:20px;stroke:{{ s.color_tip_icon }};fill:none;stroke-width:2}
    /* CTA */
    #mdw-einsteiger-guide-{{ section.id }} .cta{margin-top:34px;background:linear-gradient(180deg,{{ s.color_cta_grad_start }},{{ s.color_cta_grad_end }});color:{{ s.color_cta_text }};border-radius:var(--r-xl);padding:34px 22px;box-shadow:var(--shadow)}
    #mdw-einsteiger-guide-{{ section.id }} .cta h3{margin:0 0 8px;text-align:center;color:{{ s.color_cta_headline }}}
    #mdw-einsteiger-guide-{{ section.id }} .cta p{margin:0 0 18px;text-align:center;color:{{ s.color_cta_sub }} }
    #mdw-einsteiger-guide-{{ section.id }} .cta .row{display:flex;gap:12px;justify-content:center;flex-wrap:wrap;margin-bottom:18px}
    #mdw-einsteiger-guide-{{ section.id }} .benefits{display:grid;grid-template-columns:repeat(3,1fr);gap:18px;max-width:820px;margin:14px auto 0}
    #mdw-einsteiger-guide-{{ section.id }} .benefit{display:flex;gap:10px;align-items:center;justify-content:center;color:{{ s.color_cta_sub }}}
   /* Benefits â€“ SVG Checks (sauber & konsistent) */
#mdw-einsteiger-guide-{{ section.id }} .benefit .bico{
  width:22px;height:22px;display:block;
}
#mdw-einsteiger-guide-{{ section.id }} .benefit .ci-circle{
  fill:transparent; stroke:{{ s.color_cta_check }}; stroke-width:2;
}
#mdw-einsteiger-guide-{{ section.id }} .benefit .ci-check{
  fill:none; stroke:{{ s.color_cta_check }}; stroke-width:2;
  stroke-linecap:round; stroke-linejoin:round;
}

    @media (max-width:1024px){
      #mdw-einsteiger-guide-{{ section.id }} .quicknav{grid-template-columns:repeat(2,1fr)}
      #mdw-einsteiger-guide-{{ section.id }} .two{grid-template-columns:1fr}
      #mdw-einsteiger-guide-{{ section.id }} .errgrid{grid-template-columns:1fr}
      #mdw-einsteiger-guide-{{ section.id }} .tiles{grid-template-columns:repeat(2,1fr)}
    }
    @media (max-width:640px){
      #mdw-einsteiger-guide-{{ section.id }} .grid3{grid-template-columns:1fr}
      #mdw-einsteiger-guide-{{ section.id }} .hero{padding:40px 0 16px}
      #mdw-einsteiger-guide-{{ section.id }} .quicknav{grid-template-columns:1fr}
      #mdw-einsteiger-guide-{{ section.id }} .benefits{grid-template-columns:1fr}
    }
  </style>
  <!-- HERO -->
  <header class="hero">
    <div class="container">
      {%- if s.badge != blank -%}<span class="badge">{{ s.badge }}</span>{%- endif -%}
      {%- if s.h1 != blank -%}<h1>{{ s.h1 }}</h1>{%- endif -%}
      {%- if s.intro != blank -%}<p class="lead">{{ s.intro }}</p>{%- endif -%}
      <div class="hero-cta">
        {%- if s.btn1_label != blank -%}<a class="btn" href="{{ s.btn1_link }}">{{ s.btn1_label }}</a>{%- endif -%}
        {%- if s.btn2_label != blank -%}<a class="btn" href="{{ s.btn2_link }}">{{ s.btn2_label }}</a>{%- endif -%}
      </div>
      <div class="quicknav">
        {%- for block in section.blocks -%}
          {%- if block.type == 'quicknav' -%}
            <a class="q" href="{{ block.settings.link }}"><span class="num">{{ forloop.index }}</span><span>{{ block.settings.label }}</span></a>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </header>
  <!-- Was ist Dampfen? (3 Karten) -->
  <section id="{{ s.id_was_ist }}" class="section alt">
    <div class="container">
      <h2>{{ s.h2_was_ist }}</h2>
      <p class="lead">{{ s.lead_was_ist }}</p>
      <div class="grid3" style="margin-top:18px">
        {%- for block in section.blocks -%}
          {%- if block.type == 'info_card' -%}
            <article class="card">
              <h3>{{ block.settings.title }}</h3>
              <p class="meta">{{ block.settings.meta }}</p>
              {{ block.settings.richtext }}
            </article>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </section>
  <!-- GerÃ¤tearten + Tabelle -->
  <section id="{{ s.id_geraete }}" class="section">
    <div class="container">
      <h2 style="text-align:center">{{ s.h2_geraete }}</h2>
      <p class="lead" style="text-align:center">{{ s.lead_geraete }}</p>
      <div class="table-wrap" style="margin-top:18px">
        <table class="tbl">
          <thead>
            <tr>
              <th>{{ s.col_device }}</th>
              <th>{{ s.col_for }}</th>
              <th>{{ s.col_pros }}</th>
              <th>{{ s.col_cons }}</th>
              <th>{{ s.col_price }}</th>
            </tr>
          </thead>
          <tbody>
            {%- for block in section.blocks -%}
              {%- if block.type == 'device_row' -%}
                <tr>
                  <td><strong>{{ block.settings.device }}</strong>{% if block.settings.tag != blank %}<br><span class="chip tag">{{ block.settings.tag }}</span>{% endif %}</td>
                  <td>{{ block.settings.for_who }}</td>
                  <td>{{ block.settings.pros }}</td>
                  <td>{{ block.settings.cons }}</td>
                  <td>{{ block.settings.price }}</td>
                </tr>
              {%- endif -%}
            {%- endfor -%}
          </tbody>
        </table>
      </div>
    </div>
  </section>
  <!-- Nikotin & Inhalation -->
  <section id="{{ s.id_nikotin }}" class="section alt">
    <div class="container">
      <h2>{{ s.h2_nikotin }}</h2>
      <p class="lead">{{ s.lead_nikotin }}</p>
      <div class="two" style="margin:18px 0 24px">
        {%- for block in section.blocks -%}
          {%- if block.type == 'panel' -%}
            <div class="panel">
              <h3>{{ block.settings.title }}</h3>
              {{ block.settings.content }}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
      <div class="table-wrap">
        <table class="tbl">
          <thead>
            <tr>
              <th>{{ s.col_opt }}</th>
              <th>{{ s.col_effect }}</th>
              <th>{{ s.col_throat }}</th>
              <th>{{ s.col_vapor }}</th>
              <th>{{ s.col_strength }}</th>
            </tr>
          </thead>
          <tbody>
            {%- for block in section.blocks -%}
              {%- if block.type == 'compare_row' -%}
                <tr>
                  <td><strong>{{ block.settings.opt }}</strong></td>
                  <td>{{ block.settings.effect }}</td>
                  <td>{{ block.settings.throat }}</td>
                  <td>{{ block.settings.vapor }}</td>
                  <td>{{ block.settings.strength }}</td>
                </tr>
              {%- endif -%}
            {%- endfor -%}
          </tbody>
        </table>
      </div>
      {%- if s.nico_title != blank -%}
      <div class="nicobox">
        <h3 style="margin:0 0 6px">{{ s.nico_title }}</h3>
        <div class="tiles">
          {%- for block in section.blocks -%}
            {%- if block.type == 'nico_tile' -%}
              <div class="tile {% if block.settings.active %}active{% endif %}">
                <div class="pill">{{ block.settings.pill }}</div>
                <strong>{{ block.settings.title }}</strong>
                <div style="color:var(--muted);font-size:.92rem">{{ block.settings.sub }}</div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
      {%- endif -%}
    </div>
  </section>
  <!-- Fehlerkarten + Callout -->
  <section id="{{ s.id_fehler }}" class="section">
    <div class="container">
      <h2 style="text-align:center">{{ s.h2_fehler }}</h2>
      <p class="lead" style="text-align:center">{{ s.lead_fehler }}</p>
      <div class="errgrid" style="margin-top:18px">
        {%- for block in section.blocks -%}
          {%- if block.type == 'error_card' -%}
            <article class="err {{ block.settings.tone }}">
              <div class="hd">
                <span class="ico"><svg viewBox="0 0 24 24"><path d="M12 7v7"/><path d="M12 17h.01"/></svg></span>
                <span>{{ block.settings.title }}</span>
              </div>
              <div class="body">
                {%- if block.settings.error != blank -%}
                <div class="card" style="background:{{ block.settings.error_bg }};border-color:{{ block.settings.error_border }}"><strong>{{ s.label_error }}</strong> {{ block.settings.error }}</div>
                {%- endif -%}
                {%- if block.settings.solution != blank -%}
                <div class="card" style="background:{{ block.settings.solution_bg }};border-color:{{ block.settings.solution_border }}"><strong>{{ s.label_solution }}</strong> {{ block.settings.solution }}</div>
                {%- endif -%}
                {%- if block.settings.list != blank -%}
                <div class="card" style="background:#fff"><strong>{{ block.settings.list_title }}</strong>
                  {%- assign list_items = block.settings.list | split: '\n' -%}
                  <ul style="margin:8px 0 0 18px">{%- for li in list_items -%}<li>{{ li }}</li>{%- endfor -%}</ul>
                </div>
                {%- endif -%}
              </div>
            </article>
          {%- endif -%}
        {%- endfor -%}
      </div>
      {%- if s.tip_text != blank -%}
      <div class="callout">
        <div class="info"><svg viewBox="0 0 24 24"><circle cx="12" cy="12" r="9"/><path d="M12 16v-5"/><path d="M12 8h.01"/></svg></div>
        <h3 style="margin:4px 0 8px">{{ s.tip_title }}</h3>
        <p style="margin:0">{{ s.tip_text }}</p>
      </div>
      {%- endif -%}
    </div>
  </section>
  <!-- Bottom CTA -->
  <section class="section alt" aria-label="Call to action">
    <div class="container">
      <div class="cta">
        <h3>{{ s.cta_headline }}</h3>
        <p>{{ s.cta_copy }}</p>
        <div class="row">
          {%- if s.cta_btn1_label != blank -%}<a class="btn" href="{{ s.cta_btn1_link }}">{{ s.cta_btn1_label }}</a>{%- endif -%}
          {%- if s.cta_btn2_label != blank -%}<a class="btn ghost" href="{{ s.cta_btn2_link }}">{{ s.cta_btn2_label }}</a>{%- endif -%}
        </div>
        <div class="benefits">
          {%- for block in section.blocks -%}
            {%- if block.type == 'benefit' -%}
              <div class="benefit"><span class="bico"></span><span>{{ block.settings.text }}</span></div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </section>
</section>
