<ul id="desktopVerticalMenu" class="site-nav-vertical list-unstyled color-{{ section.settings.vertical_menu_color }}" nov-item-act data-toggle="vertical_menu">
  {% for link in linklists[section.settings.vertical_menu].links %}
    {%- assign three_level_nav = false -%}
    {%- assign child_list_handle = link.title | handleize -%}

    {% if linklists[child_list_handle].links != blank %}
      {% for childlink in linklists[child_list_handle].links %}
        {% assign grand_child_list_handle = childlink.title | handleize %}
        {% if linklists[grand_child_list_handle].links != blank %}
          {%- assign three_level_nav = true -%}
        {% endif %}
      {% endfor %}
    {% endif %}

    {% if linklists[child_list_handle].links != blank %}
      <li class="nav--lv1 parent--lv1 site-nav--Default{% if link.active %} site-nav--active{% endif %}{% if forloop.last %} last{% endif %}">
        <a href="{{ link.url }}" class="site-nav__link--main">
          {% for block in section.blocks %}
            {% if block.settings.name_item == link.title and block.settings.icon_menu != blank %}
              <span class="site-nav--icon">
                <img class="img-fluid" src="{{ block.settings.icon_menu | image_url: width: 50 }}" width="50" height="50" alt="{{ block.settings.icon_menu.alt | default: 'icon' }}"/>
              </span>
              {% break %}
            {% endif %}
          {% endfor %}
          <span class="site-nav--title">{{ link.title }}</span>
          <span class="icon-right d-none d-md-block">{% render 'icon-arrow-long-right' %}</span>
          <div class="nav-direc"><i class="zmdi zmdi-chevron-down"></i></div>
        </a>
        <div class="nav-dropdown--lv1 MenuDefault">
          {% if three_level_nav %}
            {% if linklists[child_list_handle].links != blank %}
              <ul>
                {% for childlink in linklists[child_list_handle].links %}
                  {% assign grand_child_list_handle = childlink.title | handle %}
                  <li class="nav--lv2{% if linklists[grand_child_list_handle].links != blank %} parent--lv2{% endif %}">
                    <a href="{{ childlink.url }}" class="site-nav__link--second site-nav__link">
                      <span>{{ childlink.title | escape }}</span>
                      {% if linklists[grand_child_list_handle].links != blank %}
                      <span class="nav-direc"><i class="zmdi zmdi-chevron-down"></i></span>
                      {% endif %}
                    </a>
                    {% if linklists[grand_child_list_handle].links != blank %}
                      <div class="nav-dropdown--lv2">
                        <ul>
                          {% for grandchildlink in linklists[grand_child_list_handle].links %}
                            <li>
                              <a href="{{ grandchildlink.url }}" class="site-nav__link">{{ grandchildlink.title | escape }}</a>
                            </li>
                          {% endfor %}
                        </ul>
                      </div>
                    {% endif %}
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          {% else %}
            <ul>
              {% for childlink in linklists[child_list_handle].links %}
                <li {% if childlink.active %}class="site-nav--active"{% endif %}>
                  <a href="{{ childlink.url }}" class="site-nav__link{% if forloop.last %} site-nav__link--last{% endif %}">{{ childlink.title | escape }}</a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
      </li>
    {% else %}
      <li class="nav--lv1{% if link.active %} site-nav--active{% endif %}{% if forloop.last %} last{% endif %}">
        <a href="{{ link.url }}" class="site-nav__link--main" title="{{ link.title }}">
        {% for block in section.blocks %}
          {% if block.settings.name_item == link.title and block.settings.icon_menu != blank %}
            <span class="site-nav--icon">
              <img class="img-fluid" src="{{ block.settings.icon_menu | image_url: width: 50 }}" width="50" height="50" alt="{{ block.settings.icon_menu.alt | default: 'icon' }}"/>
            </span>
            {% break %}
          {% endif %}
        {% endfor %}
        {{ link.title }}
        </a>
      </li>
    {% endif %}
  {% endfor %}
</ul>