<div class="form-vertical">
    <div class="title_block">Kundenaccount erstellen</div>
    <p>Wenn Du noch keinen Kunden-Account hast, kannst Du Dir hier einen erstellen.</p>

    {{ form.errors | default_errors }}
    {%- form 'create_customer', class: 'form form-width mx-auto', novalidate: 'novalidate' -%}
        <input type="hidden" name="return_to" id="return_to" value="">
        <input type="hidden" id="ageCheckValue" name="customer[note][Geprüft]" value="">
        {{ form.errors | default_errors }}
        <div class="block-form-login">
        <div class="form-group novform-firstname">
            <input
            type="text"
            class="input input--{{ settings.input_style }} input--large"
            id="register_first_name"
            name="customer[first_name]"
            placeholder="{{ 'customer.register.first_name' | t }}"
            {% if form.first_name %}
                value="{{ form.first_name }}"
            {% endif %}
            >
        </div>

        <div class="form-group novform-firstname">
            <input
            type="text"
            class="input input--{{ settings.input_style }} input--large"
            id="register_last_name"
            name="customer[last_name]"
            placeholder="{{ 'customer.register.last_name' | t }}"
            {% if form.last_name %}
                value="{{ form.last_name }}"
            {% endif %}
            >
        </div>

        <div class="form-group novform-firstname">
            <input
            type="text"
            class="input input--{{ settings.input_style }} input--large"
            id="register_street"
            name="customer[note][Strasse]"
            placeholder="Straße"
            >
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group novform-firstname">
                    <input
                    type="text"
                    class="input input--{{ settings.input_style }} input--large"
                    id="register_zipcode"
                    name="customer[note][Postleitzahl]"
                    placeholder="Plz"
                    >
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group novform-firstname">
                    <input
                    type="text"
                    class="input input--{{ settings.input_style }} input--large"
                    id="register_city"
                    name="customer[note][Ort]"
                    placeholder="Ort"
                    >
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="form-group novform-firstname">
                    <select
                    class="input input--{{ settings.input_style }} input--large"
                    id="register_country"
                    name="customer[note][Land]"
                    >
                    <option value="Germany" selected="selected">Deutschland</option>
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group novform-firstname">
                    <input
                    type="date"
                    class="input input--{{ settings.input_style }} input--large"
                    id="register_birthday"
                    name="customer[note][Birthday]"
                    placeholder="Geburtsdatum"
                    >
                    <div class="text-center">Geburtsdatum</div>
                </div>
            </div>
        </div>
        <div class="form-group novform-email">
            <input
            class="input input--{{ settings.input_style }} input--large"
            type="email"
            id="RegisterForm-email"
            name="customer[email]"
            {% if form.email %}
                value="{{ form.email }}"
            {% endif %}
            spellcheck="false"
            autocapitalize="off"
            autocomplete="email"
            aria-required="true"
            placeholder="{{ 'customer.register.email' | t }}"
            required
            >
        </div>

        <div class="form-group novform-password">
            <input
            type="password"
            class="input w-full"
            id="register-password"
            name="customer[password]"
            autocomplete="new-password"
            placeholder="{{ 'customer.register.password' | t }}"
            {%- if form.errors contains 'password' %}
                aria-invalid="true"
                aria-describedby="register-password-error"
            {%- endif %}
            aria-required="true"
            required
            >
        </div>

        <div class="form-checkbox novform-newsletter">
                <label id="form-checkbox" class="custom_checkbox d-inline-flex mb-10">
                    <input type="checkbox" name="newsletter" value="1" class="mb-0">
                    <span class="text">{{ 'customer.register.checkbox_newsletter' | t }}</span>
                </label>

                <div class="bank_login mb-20">{{ 'customer.register.bank_login' | t }}
                    <a href="{{ routes.account_login_url }}">{{ 'customer.register.log_in' | t }}</a>
                </div>
            </div>
            
        <div class="fraspyContainer"></div>
        <div
            class="form_submit">
            <button class="btn" aria-label="{{ 'customer.register.submit_register' | t }}">
            {{ 'customer.register.submit_register' | t }}
            </button>
        </div>
        </div>
    {% endform %}
</div>
